@model DemoProject.Services.ViewModel.Management.Conference.MeetingViewModel
@using DemoProject.Services.HtmlHelpers
@using DemoProject.Services.ViewModel.Management.Conference
@using DemoProject.Services.ViewModel.Configuration

@{
    MeetingViewModel model = new MeetingViewModel();
    HeaderPartialModel headerPartialModel = new HeaderPartialModel("METVRF");
}

<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Meeting - Verify</title>
</head>
<body>
    <div class="container-fluid">
        @*======= First Row - For Header =======*@
        <div class="row">
            <div class="offset-1 col-10">
                @Html.Partial("Header", headerPartialModel)
            </div>
        </div>

        @*======= Second Row - Data Entry Page =======*@
        <div class="row mt-3">
            <div class="offset-1 col-10">
                <div class="card mb-3">
                    @using (Html.BeginForm("Verify", "Meeting", FormMethod.Post, new { enctype = "multipart/form-data", id = "form", autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        {
                            <div class="card-body">
                                @*======= First Row - Mandatory Mark =======*@
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <h6 class="mb-2 text-right text-muted"><b class="mandatory-mark">&nbsp; Mandatory Field</b></h6>
                                    </div>
                                </div>

                                @*======= Second Row - Page Title =======*@
                                <div class="row mt-2">
                                    @*Page Title*@
                                    <div class="col-12">
                                        <h5 class="font-weight-bold mt-1">Verify</h5>
                                        <hr />
                                    </div>
                                </div>

                                @*Submit Error*@
                                @Html.ValidationMessage("SubmitError")

                                @*======= Third Row - Data Entry Page =======*@
                                <div class="row read-only">
                                    <div class="col-12">
                                        @*MakerRemark*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Maker Remark")
                                            @Html.TextBoxFor(m => m.MakerRemark, new { @class = "form-control text-capitalize read-only" })
                                            @Html.ValidationMessageFor(m => m.MakerRemark)
                                        </div>

                                        @*MeetingTypePrmKey*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Meeting Type")
                                            @Html.DropDownListFor(m => m.MeetingTypeId, new SelectList(model.MeetingTypeDropdownList, "Value", "Text"), "Select Meeting Type", new { @class = "form-control mandatory-mark" })
                                            @Html.ValidationMessageFor(m => m.MeetingTypeId)
                                        </div>

                                        @*Title*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Title")
                                            @Html.TextBoxFor(m => m.Title, new { @id = "title", @class = "form-control mandatory-mark" })
                                            @Html.ValidationMessageFor(m => m.Title)
                                        </div>

                                        @*TransTitle*@
                                        <div class="form-group">
                                            @Html.CustomLabel(model.TitleInRegionalLanguage)
                                            @Html.TextBoxFor(m => m.TransTitle, null, new { @id = "trans-title", @class = "form-control mandatory-mark" })
                                            @Html.ValidationMessageFor(m => m.TransTitle)
                                        </div>

                                        @*Objective*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Objective")
                                            @Html.TextBoxFor(m => m.Objective, new { @id = "objective", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Objective)
                                        </div>

                                        @*TransObjective*@
                                        <div class="form-group">
                                            @Html.CustomLabel(model.ObjectiveInRegionalLanguage)
                                            @Html.TextBoxFor(m => m.TransObjective, null, new { @id = "trans-objective", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.TransObjective)
                                        </div>

                                        @*MeetingDate*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Meeting Date")
                                            @Html.TextBoxFor(m => m.MeetingDate, "{0:yyyy-MM-dd}", new { @class = "form-control mandatory-mark", required = "required" })
                                            @Html.ValidationMessageFor(m => m.MeetingDate)
                                        </div>

                                        @*FullAddress*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Full Address")
                                            @Html.TextBoxFor(m => m.FullAddress, new { @id = "full-address", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.FullAddress)
                                        </div>

                                        @*TransFullAddress*@
                                        <div class="form-group">
                                            @Html.CustomLabel(model.FullAddressInRegionalLanguage)
                                            @Html.TextBoxFor(m => m.TransFullAddress, null, new { @id = "trans-full-address", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.TransFullAddress)
                                        </div>

                                        @*ArrivalTime*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Arrival Time")
                                            @Html.TextBoxFor(m => m.ArrivalTime, new { @id = "arrival-time", @class = "form-control mandatory-mark" })
                                            @Html.ValidationMessageFor(m => m.ArrivalTime)
                                        </div>

                                        @*IsAllowancePayble*@
                                        <div class="row form-group">
                                            <div class="col-10">
                                                @Html.CustomLabel("Is Allowance Payble")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-right">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.IsAllowancePayble, new { @id = "is-allowance-payble", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*IsPayByCash*@
                                        <div class="row form-group">
                                            <div class="col-10">
                                                @Html.CustomLabel("Is Pay By Cash")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-right">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.IsPayByCash, new { @id = "is-pay-by-cash", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*CommencementTime*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Commencement Time")
                                            @Html.TextBoxFor(m => m.CommencementTime, new { @id = "commencement-time", @class = "form-control mandatory-mark" })
                                            @Html.ValidationMessageFor(m => m.CommencementTime)
                                        </div>

                                        @*AdjournmentTime*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Adjournment Time")
                                            @Html.TextBoxFor(m => m.AdjournmentTime, new { @id = "adjournment-time", @class = "form-control mandatory-mark" })
                                            @Html.ValidationMessageFor(m => m.AdjournmentTime)
                                        </div>

                                        @*StartTime*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Start Time")
                                            @Html.TextBoxFor(m => m.StartTime, new { @id = "start-time", @class = "form-control mandatory-mark" })
                                            @Html.ValidationMessageFor(m => m.StartTime)
                                        </div>

                                        @*EndTime*@
                                        <div class="form-group">
                                            @Html.CustomLabel("End Time")
                                            @Html.TextBoxFor(m => m.EndTime, new { @id = "end-time", @class = "form-control mandatory-mark" })
                                            @Html.ValidationMessageFor(m => m.EndTime)
                                        </div>

                                        @*NextMeetingDate*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Next Meeting Date")
                                            @Html.TextBoxFor(m => m.NextMeetingDate, "{0:yyyy-MM-dd}", new { @class = "form-control mandatory-mark" })
                                            @Html.ValidationMessageFor(m => m.NextMeetingDate)
                                        </div>

                                        @*Note*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Note")
                                            @Html.TextAreaFor(m => m.Note, new { @id = "note", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Note)
                                        </div>

                                        @*TransNote*@
                                        <div class="form-group">
                                            @Html.CustomLabel(model.NoteInRegionalLanguage)
                                            @Html.TextAreaFor(m => m.TransNote, new { @id = "trans-note", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.TransNote)
                                        </div>

                                        @*NameOfUser*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Name Of User")
                                            @Html.TextBoxFor(m => m.NameOfUser, new { @class = "form-control" })
                                        </div>

                                        @*EntryDateTime*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Entry Date Time")
                                            @Html.TextBoxFor(m => m.EntryDateTime, new { @class = "form-control" })
                                        </div>

                                        @*Hiddent Field For MeetingPrmKey*@
                                        @Html.HiddenFor(m => m.MeetingPrmKey)

                                        @*Hiddent Field For MeetingId*@
                                        @Html.HiddenFor(m => m.MeetingId)

                                        @*Hiddent Field For MeetingModificationPrmKey*@
                                        @Html.HiddenFor(m => m.MeetingModificationPrmKey)

                                        @*Hiddent Field For MeetingTranslationPrmKey*@
                                        @Html.HiddenFor(m => m.MeetingTranslationPrmKey)

                                        @*Hiddent Field For MeetingAgendaPrmKey*@
                                        @Html.HiddenFor(m => m.MeetingAgendaPrmKey)

                                        @*Hiddent Field For MeetingInviteeBoardOfDirectorPrmKey*@
                                        @Html.HiddenFor(m => m.MeetingInviteeBoardOfDirectorPrmKey)

                                        @*Hiddent Field For MeetingInviteeMemberPrmKey*@
                                        @Html.HiddenFor(m => m.MeetingInviteeMemberPrmKey)

                                        @*Hiddent Field For MeetingNoticePrmKey*@
                                        @Html.HiddenFor(m => m.MeetingNoticePrmKey)

                                    </div>
                                </div>

                                @*======= Forth Row - Accordians =======*@
                                <div class="row mt-3">
                                    <div class="col-12">
                                        <div id="accordion" class="accordion md-accordion accordion-blocks">

                                            @*Accordion 1 - Meeting Agenda*@
                                            <div id="heading-meeting-agenda" class="card mt-3">
                                                <div class="card-header" id="meeting-agenda-validation" data-toggle="collapse" aria-expanded="false" aria-controls="collapse-meeting-agenda" data-target="#collapse-meeting-agenda">
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <a class="card-title" href="#">
                                                                <b>@Html.TextWithRegionalLanguage("Meeting Agenda")</b>
                                                            </a>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <span id="agenda-data-table-error" class="error d-none"> This Is Required, Please Add Valid Data.</span>
                                                        </div>
                                                        <div class="col-2">
                                                            <a href="#collapse-meeting-agenda" class="float-right" data-toggle="collapse" aria-expanded="false" aria-controls="collapse-meeting-agenda" data-target="#collapse-meeting-agenda">
                                                                <i class="fa fa-angle-down toggle-icon"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div id="collapse-meeting-agenda" class="collapse" aria-labelledby="heading-meeting-agenda" data-parent="#accordion">
                                                    <div class="card-body">
                                                        <div class="row">
                                                            <div class="col-12">
                                                                @*Meeting Agenda Data Table*@
                                                                <div class="card-body">
                                                                    <table id="tbl-agenda" class="table compact table-striped table-bordered text-nowrap" width="100%">
                                                                        <thead class="text-center read-only">
                                                                            <tr>
                                                                                <th><input type="checkbox" name="select-all" id="select-all-agenda" /></th>
                                                                                <th class="d-none">AgendaId</th>
                                                                                <th>NameOfAgenda</th>
                                                                                <th>SequenceNumber</th>
                                                                                <th>SuggestiveMemberNumber</th>
                                                                                <th>PermissiveMemberNumber</th>
                                                                                <th>Note</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody class="text-center read-only">
                                                                            @{
                                                                                IEnumerable<MeetingAgendaViewModel> meetingAgendaViewModelList = (IEnumerable<MeetingAgendaViewModel>)HttpContext.Current.Session["MeetingAgenda"];

                                                                                foreach (MeetingAgendaViewModel viewModel in meetingAgendaViewModelList)
                                                                                {
                                                                                    <tr>
                                                                                        <td><input type="checkbox" name="check_all" class="checks" /></td>
                                                                                        <td class="d-none">@viewModel.AgendaId</td>
                                                                                        <td>@viewModel.NameOfAgenda</td>
                                                                                        <td>@viewModel.SequenceNumber</td>
                                                                                        <td>@viewModel.SuggestiveMemberNumber</td>
                                                                                        <td>@viewModel.PermissiveMemberNumber</td>
                                                                                        <td>@viewModel.Note</td>
                                                                                    </tr>
                                                                                }
                                                                            }
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            @*Accordian 2 - Meeting Invitee Board Of Director*@
                                            <div id="heading-board-of-director" class="card mt-3">
                                                <div class="card-header" id="board-of-director-validation" data-toggle="collapse" aria-expanded="false" aria-controls="collapse-board-of-director" data-target="#collapse-board-of-director">
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <a class="card-title" href="#">
                                                                <b>@Html.TextWithRegionalLanguage("Meeting Invitee Board Of Director")</b>
                                                            </a>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <span id="board-of-director-data-table-error" class="error d-none"> This Is Required, Please Add Valid Data.</span>
                                                        </div>
                                                        <div class="col-2">
                                                            <a href="#collapse-board-of-director" class="float-right" data-toggle="collapse" aria-expanded="false" aria-controls="collapse-board-of-director" data-target="#collapse-board-of-director">
                                                                <i class="fa fa-angle-down toggle-icon"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div id="collapse-board-of-director" class="collapse" aria-labelledby="heading-board-of-director" data-parent="#accordion">
                                                    <div class="card-body">
                                                        <div class="row">
                                                            <div class="col-12">
                                                                <div class="card-body">
                                                                    <table id="tbl-board-of-director" class="table compact table-striped table-bordered" width="100%">
                                                                        <thead class="text-center read-only">
                                                                            <tr>
                                                                                <th><input type="checkbox" name="select-all" id="select-all-board-of-director" /></th>
                                                                                <th class="d-none">BoardOfDirectorId</th>
                                                                                <th>NameOfBoardOfDirector</th>
                                                                                <th>NoticeReferenceNumber</th>
                                                                                <th>NoticeStatus</th>
                                                                                <th>AttendanceStatus</th>
                                                                                <th>Note</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody class="text-center read-only">
                                                                            @{
                                                                                IEnumerable<MeetingInviteeBoardOfDirectorViewModel> meetingInviteeBoardOfDirectorViewModelList = (IEnumerable<MeetingInviteeBoardOfDirectorViewModel>)HttpContext.Current.Session["MeetingInviteeBoardOfDirector"];

                                                                                foreach (MeetingInviteeBoardOfDirectorViewModel viewModel in meetingInviteeBoardOfDirectorViewModelList)
                                                                                {
                                                                                    <tr>
                                                                                        <th><input type="checkbox" name="select-all" id="director-data-table-select-all-chkbox" /></th>
                                                                                        <td class="d-none">@viewModel.BoardOfDirectorId</td>
                                                                                        <td>@viewModel.NameOfBoardOfDirector</td>
                                                                                        <td>@viewModel.NoticeReferenceNumber</td>
                                                                                        <td>@viewModel.NoticeStatus</td>
                                                                                        <td>@viewModel.AttendanceStatus</td>
                                                                                        <td>@viewModel.Note</td>
                                                                                    </tr>
                                                                                }
                                                                            }
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            @*Accordian 3 - Meeting Invitee Member*@
                                            <div id="heading-meeting-invitee-member" class="card mt-3">
                                                <div class="card-header" id="meeting-invitee-member-validation" data-toggle="collapse" aria-expanded="false" aria-controls="collapse-meeting-invitee-member" data-target="#collapse-meeting-invitee-member">
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <a class="card-title" href="#">
                                                                <b>@Html.TextWithRegionalLanguage("Meeting Invitee Member")</b>
                                                            </a>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <span id="invitee-member-data-table-error" class="error d-none"> This Is Required, Please Add Valid Data.</span>
                                                        </div>
                                                        <div class="col-2">
                                                            <a href="#collapse-meeting-invitee-member" class="float-right" data-toggle="collapse" aria-expanded="false" aria-controls="collapse-meeting-invitee-member" data-target="#collapse-meeting-invitee-member">
                                                                <i class="fa fa-angle-down toggle-icon"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div id="collapse-meeting-invitee-member" class="collapse" aria-labelledby="heading-meeting-invitee-member" data-parent="#accordion">
                                                    <div class="card-body">
                                                        <div class="row">
                                                            <div class="col-12">
                                                                @*Meeting Invitee Member Data Table*@
                                                                <div class="card-body">
                                                                    <table id="tbl-invitee-member" class="table compact table-striped table-bordered text-nowrap" width="100%">
                                                                        <thead class="text-center read-only">
                                                                            <tr>
                                                                                <th><input type="checkbox" name="select-all" id="select-all-invitee-member" /></th>
                                                                                <th class="d-none">CustomerSharesCapitalAccountId</th>
                                                                                <th>NameOfCustomerSharesCapitalAccount</th>
                                                                                <th>NoticeReferenceNumber</th>
                                                                                <th>NoticeStatus</th>
                                                                                <th>AttendanceStatus</th>
                                                                                <th>Note</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody class="text-center read-only">
                                                                            @{
                                                                                IEnumerable<MeetingInviteeMemberViewModel> meetingInviteeMemberViewModelModelList = (IEnumerable<MeetingInviteeMemberViewModel>)HttpContext.Current.Session["MeetingInviteeMember"];

                                                                                foreach (MeetingInviteeMemberViewModel viewModel in meetingInviteeMemberViewModelModelList)
                                                                                {
                                                                                    <tr>
                                                                                        <td><input type="checkbox" name="check_all" class="checks" /></td>
                                                                                        <td class="d-none">@viewModel.CustomerSharesCapitalAccountId</td>
                                                                                        <td>@viewModel.NameOfCustomerSharesCapitalAccount</td>
                                                                                        <td>@viewModel.NoticeReferenceNumber</td>
                                                                                        <td>@viewModel.NoticeStatus</td>
                                                                                        <td>@viewModel.AttendanceStatus</td>
                                                                                        <td>@viewModel.Note</td>
                                                                                    </tr>
                                                                                }
                                                                            }
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            @*Accordian 4 - Meeting Notice*@
                                            <div id="heading-meeting-notice" class="card mt-3">
                                                <div class="card-header" id="meeting-notice-validation" data-toggle="collapse" aria-expanded="false" aria-controls="collapse-meeting-notice" data-target="#collapse-meeting-notice">
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <a class="card-title" href="#">
                                                                <b>@Html.TextWithRegionalLanguage("Meeting Notice")</b>
                                                            </a>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <span id="notice-data-table-error" class="error d-none"> This Is Required, Please Add Valid Data.</span>
                                                        </div>
                                                        <div class="col-2">
                                                            <a href="#collapse-meeting-notice" class="float-right" data-toggle="collapse" aria-expanded="false" aria-controls="collapse-meeting-notice" data-target="#collapse-meeting-notice">
                                                                <i class="fa fa-angle-down toggle-icon"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div id="collapse-meeting-notice" class="collapse" aria-labelledby="heading-meeting-notice" data-parent="#accordion">
                                                    <div class="card-body">
                                                        <div class="row">
                                                            <div class="col-12">
                                                                <div class="card-body">
                                                                    <table id="tbl-notice" class="table compact table-striped table-bordered text-nowrap" cellspacing="0" width="100%">
                                                                        <thead class="text-center read-only">
                                                                            <tr>
                                                                                <th><input type="checkbox" name="select-all" id="select-all-notice" /></th>
                                                                                <th class="d-none">NoticeMediaId</th>
                                                                                <th>NameOfNoticeMedia</th>
                                                                                <th class="d-none">ScheduleId</th>
                                                                                <th>NameOfSchedule</th>
                                                                                <th class="d-none">NoticeFormatId</th>
                                                                                <th>NameOfNoticeFormat</th>
                                                                                <th>Note</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody class="text-center read-only">
                                                                            @{
                                                                                IEnumerable<MeetingNoticeViewModel> meetingNoticeViewModelList = (IEnumerable<MeetingNoticeViewModel>)HttpContext.Current.Session["MeetingNotice"];

                                                                                foreach (MeetingNoticeViewModel viewModel in meetingNoticeViewModelList)
                                                                                {
                                                                                    <tr>
                                                                                        <td><input type="checkbox" name="check_all" class="checks" /></td>
                                                                                        <td class="d-none">@viewModel.NoticeMediaId</td>
                                                                                        <td>@viewModel.NameOfNoticeMedia</td>
                                                                                        <td class="d-none">@viewModel.ScheduleId</td>
                                                                                        <td>@viewModel.NameOfSchedule</td>
                                                                                        <td class="d-none">@viewModel.MenuId</td>
                                                                                        <td>@viewModel.NameOfMenu</td>
                                                                                        <td>@viewModel.Note</td>
                                                                                    </tr>
                                                                                }
                                                                            }
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Footer*@
                            @Html.OperationFooter("Verify", "Exit", "Home", Model.Remark)
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script src="~/Scripts/Custom/Meeting.js"></script>
<script>
    var url = "@Url.Action("SaveDataTables", "Meeting")";
</script>