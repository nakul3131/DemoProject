@model IEnumerable<DemoProject.Services.ViewModel.Enterprise.Establishment.OrganizationIndexViewModel>
@using DemoProject.Services.ViewModel.Configuration
@{
    HeaderPartialModel headerPartialModel = new HeaderPartialModel("ORGIND");
}

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />

    <title>Organization Index </title>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                @Html.Partial("Header", headerPartialModel)
            </div>
        </div>
        <br />

        <div class="card">
            <div class="card-body no-footer">
                <table id="example" class="display table table-striped table-hover dt-responsive nowrap cell-border">
                    <thead>
                        <tr>
                            <th>SR.</th>
                            <th>Name Of Organization</th>
                            <th>Entry Date</th>
                            <th>User Name</th>
                            <th>Open Record</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr class="hoverlightblue">
                                    <td></td>
                                    <td>@item.NameOfOrganization</td>
                                    <td>@item.EntryDateTime</td>
                                    <td>@item.NameOfUser</td>
                                    <td>
                                        <button class="btn btn-link" onclick="location.href='@Url.Action("ViewEntry","Organization",new {@item.OrganizationId })'">Open </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="card-footer">
                <div class="d-flex justify-content-center mb-2">
                    <button type="button" class="btn btn-success ml-3" onclick="window.location.href='@Url.Action("Default", "Home")'"><h5><u>Exit</u></h5></button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
