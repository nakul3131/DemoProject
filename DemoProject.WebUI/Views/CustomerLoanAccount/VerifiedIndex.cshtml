@model IEnumerable<DemoProject.Services.ViewModel.Account.Customer.LoanCustomerAccountIndexViewModel>
@using DemoProject.Services.HtmlHelpers
@using DemoProject.Services.ViewModel.Configuration

@{
    HeaderPartialModel headerPartialModel = new HeaderPartialModel("CLAVIN");
}

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Loan Customer Account - Verified List</title>
</head>
<body>
    <div class="container-fluid">
        @*======= First Row - For Header =======*@
        <div class="row">
            <div class="col-12">
                @Html.Partial("Header", headerPartialModel)
            </div>
        </div>
        <br />

        @*======= Second Row - Data Table =======*@
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <table id="example" class="display table table-striped table-hover dt-responsive nowrap cell-border">
                            <thead>
                                <tr>
                                    <th>SR.</th>
                                    <th>Name Of Customer Account</th>
                                    <th>Entry Date</th>
                                    <th>User Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var item in Model)
                                    {
                                        <tr class="hoverlightblue">
                                            <td></td>
                                            <td>@item.NameOfCustomerAccount</td>
                                            <td>@item.EntryDateTime</td>
                                            <td>@item.NameOfUser</td>
                                            <td>
                                                <button class="btn btn-link" onclick="location.href='@Url.Action("Modify","CustomerLoanAccount",new {@item.CustomerAccountId })'">Modify</button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    @Html.OperationFooter("None", "Exit", "Home", "None")
                </div>
            </div>
        </div>
    </div>
</body>
</html>

