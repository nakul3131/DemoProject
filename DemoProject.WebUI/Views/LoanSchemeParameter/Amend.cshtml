@model DemoProject.Services.ViewModel.Account.Parameter.LoanSchemeParameterViewModel
@using DemoProject.Services.HtmlHelpers
@using DemoProject.Services.ViewModel.Configuration
@using DemoProject.Services.ViewModel.Account.Parameter


@{
    HeaderPartialModel headerPartialModel = new HeaderPartialModel("LSPAMN");
    LoanSchemeParameterViewModel viewModel = new LoanSchemeParameterViewModel();

}

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />

    <title>Loan Scheme Parameter - Amend</title>
</head>
<body>
    <div class="container-fluid">
        @*======= First Row - For Header =======*@
        <div class="row">
            <div class="offset-lg-1 col-10">
                @Html.Partial("Header", headerPartialModel)
            </div>
        </div>

        @*======= Second Row - Data Entry Page =======*@
        <div class="row mt-3">
            <div class="offset-1 col-10">
                <div class="card mb-3">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        {
                            <div class="card-body">
                                @*======= First  Row - Mandatory Mark =======*@
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <h6 class="mb-2 text-right text-muted"><b class="mandatory-mark"> &nbsp; Mandatory Field</b></h6>
                                    </div>
                                </div>

                                @*======= Second Row - Page Title =======*@
                                <div class="row mt-2">
                                    @*Page Title If Screen Large Then Column - 12 Otherwise Col - 6 For Create And Remaining For Translation*@
                                    <div class="col-12">
                                        <h5 class="font-weight-bold mt-1">Amend</h5>
                                        <hr />
                                    </div>
                                </div>

                                @*Submit Error*@
                                @Html.ValidationMessage("SubmitError")

                                @*======= Third Row - Data Entry Page =======*@
                                <div class="row">
                                    <div class="col-12">
                                        @*Effective Date*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Effective Date")
                                            @Html.TextBoxFor(m => m.EffectiveDate, "{0:yyyy-MM-dd}", new { @id = "effective-date", @class = "form-control mandatory-mark set-current-date deny-past-date", @Type = "date" })
                                            @Html.ValidationMessageFor(m => m.EffectiveDate)
                                        </div>

                                        @*EnableLockInPeriodParameter*@
                                        <div class="row form-group mt4">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Lock In Period Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnableLockInPeriodParameter, new { @id = "enable-lock-in-period-parameter", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*EnableTenureListParameter*@
                                        <div class="row form-group">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Tenure List Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnableTenureListParameter, new { @id = "enable-tenure-list-parameter", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*EnableApplicationParameter*@
                                        <div class="row form-group">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Application Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnableApplicationParameter, new { @id = "enable-application-parameter", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*EnablePassbookParameter*@
                                        <div class="row form-group">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Passbook Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnablePassbookParameter, new { @id = "enable-passbook-parameter", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @* EnableDocumentParameter *@
                                        <div class="row form-group">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Document Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnableDocumentParameter, new { @id = "enable-document-parameter", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*EnableLoanPreFullPaymentParameter*@
                                        <div class="row form-group">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Loan Pre Full Payment Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnableLoanPreFullPaymentParameter, new { @id = "enable-loan-pre-full-payment-parameter", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*EnableLoanPrePartPaymentParameter*@
                                        <div class="row form-group">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Loan Pre Part Payment Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnableLoanPrePartPaymentParameter, new { @id = "enable-loan-pre-part-payment-parameter", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*EnableLoanInterestRebateParameter*@
                                        <div class="row form-group">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Loan Interest Rebate Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnableLoanInterestRebateParameter, new { @id = "enable-loan-interest-rebate-parameter", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*EnableLoanFunderParameter *@
                                        <div class="row form-group">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Loan Funder Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left ">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnableLoanFunderParameter, new { @id = "enable-loan-funder-parameter", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*EnableLoanDistributorParameter*@
                                        <div class="row form-group">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Loan Distributor Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnableLoanDistributorParameter, new { @id = "enable-loan-distributor-parameter", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*EnableRecoveryOfficerIncentiveParameter*@
                                        <div class="row form-group">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Recovery Officer Incentive Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnableRecoveryOfficerIncentiveParameter, new { @id = "enable-recovery-officer-incentive-parameter", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*EnableBusinessOfficeParameter*@
                                        <div class="row form-group @(viewModel.NumberOfBranches == 0 ? "d-none" : "")">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Business Office Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnableBusinessOfficeParameter, new { @id = "enable-business-office-parameter", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*EnableBankingChannelParameter*@
                                        <div class="row form-group @(viewModel.HasCoreBankingFeature ? "" : "d-none")">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Banking Channel Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnableBankingChannelParameter, new { @id = "enable-banking-channel-parameter", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*EnableTargetGroupParameter*@
                                        <div class="row form-group">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Target Group Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnableTargetGroupParameter, new { @id = "enable-target-group-parameter", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*EnableSmsServiceParameter*@
                                        <div class="row form-group @(viewModel.IsEnabledSmsService ? "" : "d-none")">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Sms Service Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnableSmsServiceParameter, new { @id = "enable-sms-service", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*EnableEmailServiceParameter*@
                                        <div class="row form-group @(viewModel.IsEnabledEmailService ? "" : "d-none")">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Email Service Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnableEmailServiceParameter, new { @id = "enable-email-service", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*EnableNoticeScheduleParameter*@
                                        <div class="row form-group @(viewModel.IsEnabledSmsService || viewModel.IsEnabledEmailService ? "" : "d-none")">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Notice Schedule Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnableNoticeScheduleParameter, new { @id = "enable-notice-schedule", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*EnableReportFormatParameter*@
                                        <div class="row form-group">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Report Format Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnableReportFormatParameter, new { @id = "enable-report-format-parameter", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*EnableTargetEstimationParameter*@
                                        <div class="row form-group">
                                            <div class="col-10">
                                                @Html.CustomLabel("Enable Target Estimation Parameter")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-left">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.EnableTargetEstimationParameter, new { @id = "enable-target-estimation-parameter", @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*Note*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Note")
                                            @Html.TextAreaFor(m => m.Note, new { @id = "note", @class = "form-control default-none deny-multiple-space", @placeholder = "Enter Note", @autocomplete = "off", @maxlength = "1500", onkeyup = "ToTextCapitalize()" })
                                            @Html.ValidationMessageFor(m => m.Note)
                                        </div>

                                        @*ReasonForModification*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Reason For Modification")
                                            @Html.TextAreaFor(m => m.ReasonForModification, new { @id = "reason-for-modification", @class = "form-control default-none deny-multiple-space", @placeholder = "Enter Reason For Modification", @maxlength = "1500", @autocomplete = "off", onkeyup = "ToTextCapitalize()" })
                                            @Html.ValidationMessageFor(m => m.ReasonForModification)
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Hiddent Field For PrmKey*@
                            @Html.HiddenFor(m => m.PrmKey)

                            @*Hiddent Field For LoanSchemeParameterPrmKey*@
                            @Html.HiddenFor(m => m.LoanSchemeParameterPrmKey)

                            //Save/Submit Button
                            @Html.OperationFooter("Amend", "Exit", "Home", Model.Remark)
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    $('#enable-sms-service').change(function () {
        if ($(this).is(':checked')) {
            $('#notice-schedule').removeClass('d-none');
            $('#enable-notice-schedule').prop('checked', false);
        }
        else if ($('#enable-email-service').is(':checked') == false)
            $('#notice-schedule').addClass('d-none');
        $('#enable-notice-schedule').prop('checked', false);
    })

    $('#enable-email-service').change(function () {
        if ($(this).is(':checked')) {
            $('#notice-schedule').removeClass('d-none');
            $('#enable-notice-schedule').prop('checked', false);
        }
        else if ($('#enable-sms-service').is(':checked') == false)
            $('#notice-schedule').addClass('d-none');
        $('#enable-notice-schedule').prop('checked', false);
    })
</script>
