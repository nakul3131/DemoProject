@model IEnumerable<DemoProject.Services.ViewModel.PersonInformation.Master.CountryAdditionalDetailViewModel>
@using DemoProject.Services.ViewModel.Configuration

@{
    // Make Proper Menu Parameter
    HeaderPartialModel headerPartialModel = new HeaderPartialModel("CADRIN");
}

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />

    <title>CountryAdditionalDetail - Rejected List </title>
</head>
<body>
    <div class="container-fluid">
        @*======= First Row - For Header =======*@
        <div class="row">
            <div class="col-12">
                @Html.Partial("Header", headerPartialModel)
            </div>
        </div>
        <br />

        @*======= Second Row - Data Table =======*@
        <div class="row">
            <div class="col-12">

            </div>
        </div>
        <div class="card">
            <div class="card-body no-footer">
                <table id="example" class="display table table-striped table-hover dt-responsive nowrap cell-border">
                    <thead>
                        <tr>
                            <th>SR.</th>
                            <th>Name Of Country</th>
                            <th>Entry Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr class="hoverlightblue">
                                    <td></td>
                                    <td>@item.NameOfCenter</td>
                                    <td>@item.EntryDateTime</td>
                                    <td>
                                        <button class="btn btn-link" onclick="location.href='@Url.Action("Amend","CountryAdditionalDetail",new {@item.CenterId })'">Amend </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>

