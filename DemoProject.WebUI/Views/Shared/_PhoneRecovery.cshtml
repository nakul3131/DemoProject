@{
    Layout = null;
    ViewBag.Title = "Help";
}



<link href="~/Content/Custom.css" rel="stylesheet" />
<style>

    #one {
        display: none;
    }
</style>


<script type="text/javascript">

        $(document).ready(function()
        {


            $(".tab").click(function () {
                $(".tab").removeClass("active");
                $(this).addClass("active");
            });

            $(".alert").fadeOut('slow').delay(1000).fadeIn("slow");


            $("#close").click(function () {


                $(".alert").fadeOut('slow').delay(1000).fadeIn('Slow');
            });


            $("#two").click(function () {


                var url = '/Home/Help2';

                // var status = navigator.connection.onchange;
                $.ajax({

                    url: url,
                    dataType: 'html',
                    timeout: 10000,
                    //beforeSend: function () {
                    //    $('.my-box').html('<div class="progress"><div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div></div>');
                    //    $('.progress-bar').animate({ width: "100%" }, 100);
                    //},
                    success: function (data) {
                        // alert(" your connection is alright!");

                            //figure out how long it took:)

                            $('.progress-bar').animate({ width: "100%" }, 20);
                            setTimeout(function () {
                                //alert(new Date() - time);
                                $('.progress-bar').css({ width: "100%" });

                                setTimeout(function () {
                                    $('#login').html(data);
                                }, 20);
                            }, 500);

                    },

                });


            });





        }); </script>




<div class="container-fluid">


    <!-- Second Row  -->
    <div class="row pb-0 pr-3">
        <div class="offset-8 col-2">
            <button type="button" class="btn btn-link sans-serif-family float-left ml-5" id="two">Try Another Way?</button>
        </div>
    </div>
    <!-- Third Row  -->
    <div class="row bg-white mb-5" id="login">
        <div class="offset-2 col-8">

            <div class="card bg-transparent d-block">
                <div class="progress" style="height: 3px; ">
                    <div class="progress-bar " id="myprogressBar" role="progressbar" style="width: 0%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <div class="card-header">

                    <a href="javascript:void(0)" onclick="window.location.href='#' " id="btn" class="tab " data-toggle="tooltip" data-placement="top"><i class="fas fa-envelope  fa-2x float-right color"></i><span class="mr-5">Gmail</span></a>
                    <a href="javascript:void(0)" onclick="window.location.href='#' " class="tab active " data-toggle="tooltip" data-placement="top"><i class="fas fa-phone-volume  fa-2x  pr-3 float-right color"></i><span class="mr-5">Phone</span></a>
                    <h5>
                        Account Recovery Using Smart Phone
                    </h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        {
                            <div class="d-flex justify-content-center">
                                <p>This helps to show that this account really belongs to<br /> <span class="d-flex   justify-content-center">you</span></p>
                            </div>

                            <div class="d-flex justify-content-center pl-0 pr-5 mt-5">


                                <img src="https://ssl.gstatic.com/accounts/embedded/signin_tapyes.gif" class="img" aria-hidden="true" alt="">
                                @*<img src="https://ssl.gstatic.com/accounts/account-recovery-sms-or-voice-pin.gif" class="DfbrOd TrZEUc" aria-hidden="true" alt="">*@



                            </div>

                            <div>
                                <center class="mt-5">
                                    <h5> Check Your Smart Phone?</h5>
                                    Google sent a notification to your Smart Phone. Tap Yes on the notification to continue.
                                    @* Google will send a notification to your phone to verify that it's you*@
                                </center>
                            </div>

                        }
                    }
                </div>
            </div>

            <div class="alert  alert-dismissable mb-0 mt-4 " role="alert" aria-atomic="false" id="alert">

                <button type="button" class="btn btn-link sans-serif-family float-left" id="close" data-dismiss="alert" style="margin-top:130%;margin-left:-150%;">Resend IT</button>
                @*<button class="btn btn-dark  mb-5" id="close" data-dismiss="alert" style="font-weight:normal;font-size:15px;outline-style:none;margin-top:-50%"> RESEND IT</button>*@
                @*<h6 class="text-white mt-3 ml-3">Don't see the sign-in notification?</h6>*@
            </div>

        </div>

    </div>

</div>










