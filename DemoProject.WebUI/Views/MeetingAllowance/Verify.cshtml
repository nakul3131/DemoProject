@model DemoProject.Services.ViewModel.Management.Conference.MeetingAllowanceViewModel
@using DemoProject.Services.HtmlHelpers
@using DemoProject.Services.ViewModel.Management.Conference
@using DemoProject.Services.ViewModel.Configuration

@{
    MeetingAllowanceViewModel model = new MeetingAllowanceViewModel();
    HeaderPartialModel headerPartialModel = new HeaderPartialModel("MTAVRF");
}

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Meeting Allowance - Verify</title>
</head>
<body>
    <div class="container-fluid">
        @*======= First Row - For Header =======*@
        <div class="row">
            <div class="offset-1 col-10">
                @Html.Partial("Header", headerPartialModel)
            </div>
        </div>

        @*======= Second Row - Data Entry Page =======*@
        <div class="row mt-3">
            <div class="offset-1 col-10">
                <div class="card mb-3">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        {
                            <div class="card-body read-only">
                                @*======= First Row - Mandatory Mark =======*@
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <h6 class="mb-2 text-right text-muted"><b class="mandatory-mark">&nbsp; Mandatory Field</b></h6>
                                    </div>
                                </div>

                                @*======= Second Row - Page Title, Translation =======*@
                                <div class="row mt-2">
                                    @*Page Title*@
                                    <div class="col-12">
                                        <h5 class="font-weight-bold mt-1">Verify</h5>
                                        <hr />
                                    </div>
                                </div>

                                @*Submit Error*@
                                @Html.ValidationMessage("SubmitError")

                                @*======= Third Row - Data Entry Page =======*@
                                <div class="row">
                                    <div class="col-12">                                
                                        @*MeetingTypePrmKey*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Meeting Type")
                                            @Html.DropDownListFor(m => m.MeetingTypeId, new SelectList(model.MeetingTypeDropdownList, "Value", "Text"), "Select Meeting Type", new { @class = "form-control mandatory-mark" })
                                            @Html.ValidationMessageFor(m => m.MeetingTypeId)
                                        </div>

                                        @*NameOfAllowance*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Name Of Allowance")
                                            @Html.TextBoxFor(m => m.NameOfAllowance, new { @class = "form-control mandatory-mark" })
                                            @Html.ValidationMessageFor(m => m.NameOfAllowance)
                                        </div>

                                        @*TransNameOfAllowance*@
                                        <div class="form-group">
                                            @Html.CustomLabel(model.NameOfAllowanceInRegionalLanguage)
                                            @Html.TextBoxFor(m => m.TransNameOfAllowance, new { @class = "form-control mandatory-mark" })
                                            @Html.ValidationMessageFor(m => m.TransNameOfAllowance)
                                        </div>

                                        @*Alias Name*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Alias Name")
                                            @Html.TextBoxFor(m => m.AliasName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.AliasName)
                                        </div>

                                        @*TransAliasName*@
                                        <div class="form-group">
                                            @Html.CustomLabel(model.AliasNameInRegionalLanguage)
                                            @Html.TextBoxFor(m => m.TransAliasName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.TransAliasName)
                                        </div>

                                        @*NameOnReport*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Name On Report")
                                            @Html.TextBoxFor(m => m.NameOnReport, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.NameOnReport)
                                        </div>

                                        @*TransNameOnReport*@
                                        <div class="form-group">
                                            @Html.CustomLabel(model.NameOnReportInRegionalLanguage)
                                            @Html.TextBoxFor(m => m.TransNameOnReport, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.TransNameOnReport)
                                        </div>

                                        @*ShortDescription*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Short Description")
                                            @Html.TextBoxFor(m => m.ShortDescription, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ShortDescription)
                                        </div>

                                        @*TransShortDescription*@
                                        <div class="form-group">
                                            @Html.CustomLabel(model.ShortDescriptionInRegionalLanguage)
                                            @Html.TextBoxFor(m => m.TransShortDescription, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.TransShortDescription)
                                        </div>

                                        @*IsDailyAllowance*@
                                        <div class="row form-group">
                                            <div class="col-10">
                                                @Html.CustomLabel("Is Daily Allowance")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-right">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.IsDailyAllowance, new { @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*IsRequiredBill*@
                                        <div class="row form-group">
                                            <div class="col-10">
                                                @Html.CustomLabel("Is Required Bill")
                                            </div>
                                            <div class="col-2">
                                                <div class="text-right">
                                                    <label class="switch switch-left-right">
                                                        @Html.CheckBoxFor(m => m.IsRequiredBill, new { @class = "form-control switch-input" })
                                                        <span class="slider round">
                                                            <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        @*MinimumAllowanceAmount*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Minimum Allowance Amount")
                                            @Html.TextBoxFor(m => m.MinimumAllowanceAmount, new { @class = "form-control mandatory-mark"})
                                            @Html.ValidationMessageFor(m => m.MinimumAllowanceAmount)
                                        </div>

                                        @*MaximumAllowanceAmount*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Maximum Allowance Amount")
                                            @Html.TextBoxFor(m => m.MaximumAllowanceAmount, new { @class = "form-control mandatory-mark" })
                                            @Html.ValidationMessageFor(m => m.MaximumAllowanceAmount)
                                        </div>

                                        @*DefaultAllowanceAmount*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Default Allowance Amount")
                                            @Html.TextBoxFor(m => m.DefaultAllowanceAmount, new { @class = "form-control mandatory-mark" })
                                            @Html.ValidationMessageFor(m => m.DefaultAllowanceAmount)
                                        </div>

                                        @*ActivationDate*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Activation Date")
                                            @Html.TextBoxFor(m => m.ActivationDate, "{0:yyyy-MM-dd}", new { @class = "form-control mandatory-mark"})
                                            @Html.ValidationMessageFor(m => m.ActivationDate)
                                        </div>

                                        @*ExpiryDate*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Expiry Date")
                                            @Html.TextBoxFor(m => m.ExpiryDate, "{0:yyyy-MM-dd}", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ExpiryDate)
                                        </div>

                                        @*Note*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Note")
                                            @Html.TextAreaFor(m => m.Note, new { @id = "note", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Note)
                                        </div>

                                        @*TransNote*@
                                        <div class="form-group">
                                            @Html.CustomLabel(model.NoteInRegionalLanguage)
                                            @Html.TextAreaFor(m => m.TransNote, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.TransNote)
                                        </div>

                                        @*NameOfUser*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Name Of User")
                                            @Html.TextBoxFor(m => m.NameOfUser, new { @class = "form-control" })
                                        </div>

                                        @*EntryDateTime*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Entry Date Time")
                                            @Html.TextBoxFor(m => m.EntryDateTime, new { @class = "form-control" })
                                        </div>

                                        @*Hiddent Field For MeetingAllowancePrmKey*@
                                        @Html.HiddenFor(m => m.MeetingAllowancePrmKey)

                                        @*Hiddent Field For MeetingAllowanceModificationPrmKey*@
                                        @Html.HiddenFor(m => m.MeetingAllowanceModificationPrmKey)

                                        @*Hiddent Field For MeetingAllowanceTranslationPrmKey*@
                                        @Html.HiddenFor(m => m.MeetingAllowanceTranslationPrmKey)
                                    </div>
                                </div>
                            </div>

                            @*Save/Submit Button*@
                            @Html.OperationFooter("Verify", "Exit", "Home", Model.Remark)
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
