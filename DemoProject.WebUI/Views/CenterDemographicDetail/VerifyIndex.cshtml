@model IEnumerable<DemoProject.Services.ViewModel.PersonInformation.Master.CenterDemographicDetailViewModel>
@using DemoProject.Services.HtmlHelpers
@using DemoProject.Services.ViewModel.Configuration

@{
    HeaderPartialModel headerPartialModel = new HeaderPartialModel("CDDVIN");
}

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />

    <title>Center Demographic Detail - Index For Modification</title>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                @Html.Partial("Header", headerPartialModel)
            </div>
        </div>
        <br />

        <div class="card">
            <div class="card-body no-footer">
                <table id="example" class="display table table-striped table-hover dt-responsive nowrap cell-border">
                    <thead>
                        <tr>
                            <th>SR.</th>
                            <th>Center Name</th>
                            <th>TotalPopulation</th>
                            <th>PerCapitaIncome</th>
                            <th>EducationalLevel</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr class="hoverlightblue">
                                    <td></td>
                                    <td>@item.NameOfCenter</td>
                                    <td>@item.TotalPopulation</td>
                                    <td>@item.PerCapitaIncome</td>
                                    <td>@item.EducationLevelPrmKey</td>
                                    <td>
                                        <button class="btn btn-link" onclick="location.href='@Url.Action("Modify","CenterDemographicDetail",new {@item.CenterDemographicDetailId })'">Modify </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            @Html.OperationFooter("None", "Exit", "Home", "None")
        </div>
    </div>
</body>
</html>


