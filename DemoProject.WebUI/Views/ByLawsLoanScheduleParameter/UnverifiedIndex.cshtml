@model IEnumerable<DemoProject.Services.ViewModel.Enterprise.Establishment.OrganizationLoanTypeViewModel>
@using DemoProject.Services.HtmlHelpers
@using DemoProject.Services.ViewModel.Configuration

@{
    HeaderPartialModel headerPartialModel = new HeaderPartialModel("BLPUVI");
}

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />

    <title>By Laws Loan Schedule Parameter - UnverifiedIndex</title>
</head>
<body>
    <div class="container-fluid">
        @*======= First Row - For Header =======*@
        <div class="row">
            <div class="col-md-12">
                @Html.Partial("Header", headerPartialModel)
            </div>
        </div>
        <br />

        <div class="card">
            <div class="card-body no-footer">
                <table id="example" class="display table table-striped table-hover dt-responsive nowrap cell-border">
                    <thead>
                        <tr>
                            <th>SR.</th>
                            <th class="d-none">LoanTypeId.</th>
                            <th>NameOfLoanType.</th>
                            <th>Entry Date</th>
                            <th>User Name</th>
                            <th>Entry Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr class="hoverlightblue">
                                    <td></td>
                                    <td class="d-none">@item.LoanTypeId</td>
                                    <td>@item.NameOfLoanType</td>
                                    <td>@item.EntryDateTime</td>
                                    <td>@item.NameOfUser</td>
                                    <td>@item.EntryStatus</td>
                                    <td>
                                        <button class="btn btn-link" onclick="location.href='@Url.Action("Verify","ByLawsLoanScheduleParameter",new {@item.LoanTypePrmKey })'">Verify</button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            @Html.OperationFooter("None", "Exit", "Home", "None")
        </div>
    </div>
</body>
</html>





