@model DemoProject.Services.ViewModel.Security.Users.MFAViewModel
@using DemoProject.Services.HtmlHelpers
@{
    Layout = null;
}

<!doctype html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.0/css/all.css' integrity='sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ' crossorigin='anonymous'>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    

    <title>Clear User Recent Login Session</title>
    <style>
        #one {
            display: none;
        }

        #way {
            display: none;
        }
        .mypro {
            display: none;
        }
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800;900&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        section {
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(to bottom, #f1f4f9 #dff1ff );
        }

            section .color {
                position: absolute;
                filter: blur(150px);
            }

                section .color:nth-child(1) {
                    top: 50px;
                    width: 200px;
                    height: 200px;
                    background: #ff00dc;
                    left: -180px;
                }

                section .color:nth-child(2) {
                    top: 250px;
                    bottom: -50px;
                    left: 450px;
                    width: 400px;
                    height: 400px;
                    background: #ffd800;
                }

                section .color:nth-child(3) {
                    top: 250px;
                    bottom: 50px;
                    left: 500px;
                    width: 300px;
                    height: 300px;
                    background: #0084f0;
                }

        .box {
            position: relative;
        }

            .box .square {
                position: absolute;
                background: rgba(255, 255, 255, 0.1);
                backdrop-filter: blur(5px);
                box-shadow: 0 25px 45px rgba(0, 0, 0, 0.1);
                border: 1px solid rgba(255, 255, 255, 0.15);
                border-radius: 15px;
                animation: square 10s linear infinite;
                animation-delay: calc(-1s * var(--i));
            }

        @@keyframes square {
            0%, 100% {
                transform: translateY(-20px);
            }

            50% {
                transform: translateY(20px);
            }
        }

        .box .square:nth-child(1) {
            width: 100px;
            height: 100px;
            top: -15px;
            right: -45px;
        }

        .box .square:nth-child(2) {
            width: 150px;
            height: 150px;
            top: 105px;
            left: -180px;
            z-index: 2;
        }

        .box .square:nth-child(3) {
            width: 60px;
            height: 60px;
            bottom: 85px;
            right: -45px;
            z-index: 2;
        }

        .box .square:nth-child(4) {
            width: 50px;
            height: 50px;
            bottom: 35px;
            left: -95px;
        }

        .box .square:nth-child(5) {
            width: 50px;
            height: 50px;
            top: -15px;
            left: -25px;
        }

        .box .square:nth-child(6) {
            width: 85px;
            height: 85px;
            top: 165px;
            right: -155px;
            z-index: 2;
        }

        .card {
            position: relative;
            justify-content: center;
            align-items: center;
            background: rgba(255,255,255,0.1);
            width: 400px;
            min-height: 400px;
            margin-top: 10px;
            box-shadow: 0px 25px 45px rgba(0,0,0,0.1);
            border: 2px solid rgba(255,255,255,0.5);
            border-right: 2px solid rgba(255,255,255,0.2);
            border-bottom: 2px solid rgba(255,255,255,0.2);
            border-radius: 20px;
            display: flex;
            color: white;
            margin-left: -150px;
        }

        .form {
            position: relative;
            width: 100%;
            height: 100%;
            padding: 40px;
        }

            .form h2 {
                position: relative;
                font-size: 20px;
                /*font-family: Verdana, Geneva, Tahoma, sans-serif;*/
                font-weight: 800px;
                color: #fff;
                margin-bottom: 40px;
            }

                .form h2 ::before {
                    content: '';
                    position: absolute;
                    left: 0;
                    bottom: -10px;
                    width: 80px;
                    height: 4px;
                    background: rgb(255, 255, 255);
                }

            .form .inputbox {
                width: 100%;
                margin-top: 10px;
            }

                .form .inputbox input {
                    width: 100%;
                    background: rgba(255,255,255,0.1);
                    border: none;
                    outline: none;
                    height: 40px;
                    border-radius: 30px;
                    padding: 10px 20px;
                    border: 1px solid rgba(255,255,255,0.5);
                    border-right: 1px solid rgba(255,255,255,0.2);
                    border-bottom: 1px solid rgba(255,255,255,0.2);
                    margin-left: -8px;
                    font-size: 20px;
                    letter-spacing: 1px;
                    box-shadow: inset 4px 4px 6px rgba(0, 0, 0, 0.267), inset 4px 4px 6px rgba(255, 255, 255, 0.200);
                    color: rgb(255, 255, 255);
                }

                    .form .inputbox input::placeholder {
                        color: white;
                    }

            .form .submit input {
                width: 200px;
                height: 45px;
                margin-top: 10px;
                font-size: 10px;
                background: rgb(255, 255, 255);
                border: none;
                outline: none;
                border: 1px solid rgba(255,255,255,0.5);
                border-right: 1px solid rgba(255,255,255,0.2);
                border-bottom: 1px solid rgba(255,255,255,0.2);
                border-radius: 30px;
                margin-left: 0px;
                color: rgb(0, 0, 0);
                box-shadow: 1px 2px 3px 3px rgba(0, 0, 0, 0.329);
            }

            .form p {
                margin-top: 10px;
                letter-spacing: 0;
            }

            .form .inputBx input[type="submit"] {
                width: 200px;
                padding: 10px 10px;
                transition: 1.5s;
                text-align: center;
                font-weight: 500;
                color: #fff;
                opacity: 0.7;
                font-size: 1.4rem;
                margin-top: 0;
                margin-bottom: 60px;
                text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
            }

                .form .inputBx input[type="submit"]:hover {
                    background: linear-gradient(115deg, rgba(0, 0, 0, 0.10), rgba(255, 255, 255, 0.25));
                    color: #fff;
                    transition: 0.5s;
                }

        .progress {
            position: relative;
            margin-left: -23%;
            width: 150%;
        }

        .form #close {
            z-index: 100;
            cursor: pointer;
            position: absolute;
            margin-left: 65%;
        }
        .tab {
           
            z-index:100;
        }
        .card-header >a.active {
            text-decoration: none !important;
        }
    </style>
</head>

<body id="background">


    @*Center Of Page*@
    <div class="col-12 col-sm-10 offset-sm-1 col-lg-8 offset-lg-2">
        <div class="row heightresponsive">

        </div>

        @*Second Row For User Profile Photo*@
        <!-- Second Row  -->
        <div class="row pb-4" >
            <div class="offset-8 col-2" style="margin-top:-10%;">
                <button type="button" class="btn btn-link sans-serif-family float-left" id="two">Try Another Way?</button>
            </div>
        </div>

        @*Third Row For Clear User Login Session Page*@
        <section style="margin-top:-20%;">
            <div class="color"></div>
            <div class="color"></div>
            <div class="color"></div>
            <div class="box">
                <div class="progress bg-transparent " style="height:3px;box-shadow: 1px 1px 1px rgba(0,0,0,0.1)">
                    <div class="progress-bar " id="myprogressBar1" role="progressbar" style="width: 0%; border-radius: 40%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <div class="row" style="margin-top:-6%;">
                    <div class="offset-2 col-8">
                        <div class="row pt-0 pt-lg-2 pb-lg-2" id="login">
                            <div class="col-12 col-sm-10 offset-sm-1 col-lg-8 offset-lg-2">
                                <div class="card" style="margin-top:5%">

                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h5 class="card-title text-center" style="color:white">
                                            Account Recovery Using Smart Phone
                                        </h5>
                                        <a href="javascript:void(0)" onclick="window.location.href='#' " class="tab active " data-toggle="tooltip" data-placement="top" style="text-decoration: none !important;"><i class="fas fa-phone-volume  fa-2x  pr-2 float-right "></i><span class="mr-5">Phone</span></a>
                                        <a href="javascript:void(0)" onclick="window.location.href='#' " id="btn" class="tab " data-toggle="tooltip" data-placement="top"><i class="fas fa-envelope  fa-2x float-right "></i><span class="mr-5">Gmail</span></a>
                                    </div>
                                    <div class="card-body">
                                        <form>
                                            @using (Html.BeginForm())
                                            {
                                                @Html.AntiForgeryToken()
                                                {
                                                    <h5 class="card-text text-muted text-center"><small>This helps to show that this account really belongs to you</small></h5>
                                                    <div class="d-flex justify-content-center">
                                                        <img src="https://ssl.gstatic.com/accounts/embedded/signin_tapyes.gif" class="img" aria-hidden="true" alt="">
                                                        @*<img src="https://ssl.gstatic.com/accounts/account-recovery-sms-or-voice-pin.gif" class="DfbrOd TrZEUc" aria-hidden="true" alt="">*@
                                                        <div class="justify-content-lg-end mt-4">
                                                            <div class="alert alert-dismissable " role="alert" aria-atomic="false" id="alert">
                                                                <button type="button" class="btn btn-link float-right sans-serif-family float-left Resend" id="close" data-dismiss="alert" style="margin-top:-7%;margin-left:35%;" href="javascript:void(0)" onclick="ResendSMS()">Resend IT</button>
                                                                @*<button class="btn btn-dark  mb-5" id="close" data-dismiss="alert" style="font-weight:normal;font-size:15px;outline-style:none;margin-top:-50%"> RESEND IT</button>*@

                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div>
                                                        <center class="mt-5">
                                                            <h5> Check Your Smart Phone?</h5>
                                                            Google sent a notification to your Smart Phone. Tap Yes on the notification to continue.
                                                            @* Google will send a notification to your phone to verify that it's you*@
                                                        </center>
                                                    </div>
                                                }
                                            }
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>


    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script>
        //Document Ready Function For Try another way link
        $(document).ready(function ()
        {

            $(".tab").click(function () {
                $(".tab").removeClass("active");
                $(this).addClass("active");
            });

            $(".alert").fadeOut('slow').delay(3000).fadeIn("slow");


            $("#close").click(function () {

                $(".alert").fadeOut('slow').delay(3000).fadeIn('Slow');
              
            });

            // Another Method For Login
            $("#two").click(function ()
            {
                debugger
                var url = '/AccountServices/_EmailRecovery';

                $.ajax(
                {
                    url: url,
                    dataType: 'html',
                    timeout: 10000,
                    success: function (data)
                    {
                        $('.progress-bar').animate({ width: "100%" }, 20);
                        setTimeout(function () {
                            $('.progress-bar').css({ width: "100%" }); setTimeout(function () {
                                $('#login').html(data);
                            }, 20);
                        }, 500);
                    },
                });
            });
            return false;
        });

        function ResendSMS()
        {
            $.ajax(
            {
                url: '@Url.Action("ReSendUserAuthenticationToken", "SMS")',
                type: "GET",
                dataType:"JSON",
                success: function (data)
                {
                    if (data == "Success")
                    {

                        location.reload();
                    }
                },
                error: function ()
                {
                    //alert("An error has occured!!!");
                }
            });
        }
    </script>
</body>
</html>





