<body>

    <div class="container-fluid">
        <!-- First Row  -->
        <div class="row p-3 bg-darkgray align-items-center">
            <div class="col-12">
                <h3 class="text-white pt-2"><b>Trouble Loggin In</b></h3>
            </div>
        </div>
        <!-- Second Row  -->
        <div class="row border-bottom p-4">
            <div class="offset-2 col-8">
                <div class="input-group">
                    <select id="select-state" class="form-control  border-0" placeholder="Search Login Issue" aria-label="loginIssue" size="100">
