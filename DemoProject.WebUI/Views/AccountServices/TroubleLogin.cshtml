                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Second Row  -->
        <div class="row pt-2 pr-3">
            <div class="offset-8 col-2">
                <button type="button" class="btn btn-link sans-serif-family float-left" id="one">Try Another Way?</button>
            </div>
        </div>
        <!-- Third Row  -->
        <div class="row bg-white" id="login">
            <div class="offset-2 col-8">

                <div class="card bg-transparent d-block">
