@model DemoProject.Services.ViewModel.Management.Master.AgendaViewModel
@using DemoProject.Services.HtmlHelpers
@using DemoProject.Services.ViewModel.Management.Master
@using DemoProject.Services.ViewModel.Configuration

@{
    AgendaViewModel model = new AgendaViewModel();
    HeaderPartialModel headerPartialModel = new HeaderPartialModel("AGDAUT");
}

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />

    <title>Agenda - Verify</title>
</head>
<body>
    <div class="container-fluid">
        @*======= First Row - For Header =======*@
        <div class="row">
            <div class="offset-1 col-10">
                @Html.Partial("Header", headerPartialModel)
            </div>
        </div>

        @*======= Second Row - Data Entry Page =======*@
        <div class="row mt-3">
            <div class="offset-1 col-10">
                <div class="card mb-3">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        {
					        <div class="card-body read-only">
                                @*======= First Row - Mandatory Mark =======*@
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <h6 class="mb-2 text-right text-muted"><b class="mandatory-mark">&nbsp; Mandatory Field</b></h6>
                                    </div>
                                </div>

                                @*======= Second Row - Page Title, Translation =======*@
                                <div class="row mt-2">
                                    @*Page Title*@
                                    <div class="col-12">
                                        <h5 class="font-weight-bold mt-1">Verify</h5>
                                        <hr />
                                    </div>
                                </div>

                                @*Submit Error*@
                                @Html.ValidationMessage("SubmitError")

                                @*======= Third Row - Data Entry Page =======*@
                                <div class="row read-only">
                                    <div class="col-12">
                                        @*MakerRemark*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Maker Remark")
                                            @Html.TextBoxFor(m => m.MakerRemark, new { @class = "form-control mandatory-mark " })
                                            @Html.ValidationMessageFor(m => m.MakerRemark)
                                        </div>

                                        @*NameOfAgenda*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Name Of Agenda")
                                            @Html.TextBoxFor(m => m.NameOfAgenda, new { @id = "agenda-name", @class = "form-control mandatory-mark" })
                                            @Html.ValidationMessageFor(m => m.NameOfAgenda)
                                        </div>

                                        @*TransNameOfAgenda*@
                                        <div class="form-group">
                                            @Html.CustomLabel(model.NameOfAgendaInRegionalLanguage)
                                            @Html.TextBoxFor(m => m.TransNameOfAgenda, new { @Id = "trans-agenda-name", @class = "form-control mandatory-mark" })
                                            @Html.ValidationMessageFor(m => m.TransNameOfAgenda)
                                        </div>

                                        @*AliasName*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Alias Name")
                                            @Html.TextBoxFor(m => m.AliasName, new { @id = "alias-name", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.AliasName)
                                        </div>

                                        @*TransAliasName*@
                                        <div class="form-group">
                                            @Html.CustomLabel(model.AliasNameInRegionalLanguage)
                                            @Html.TextBoxFor(m => m.TransAliasName, null, new { @id = "trans-alias-name", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.TransAliasName)
                                        </div>

                                        @*NameOnReport*@
                                        <div class="form-group">
                                            @Html.CustomLabel(" Name On Report")
                                            @Html.TextBoxFor(m => m.NameOnReport, new { @id = "name-on-report", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.NameOnReport)
                                        </div>

                                        @*TransNameOnReport*@
                                        <div class="form-group">
                                            @Html.CustomLabel(model.NameOnReportInRegionalLanguage)
                                            @Html.TextBoxFor(m => m.TransNameOnReport, null, new { @id = "trans-name-on-report", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.TransNameOnReport)
                                        </div>

                                        @*TimeAllocation*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Time Allocation")
                                            @Html.TextBoxFor(m => m.TimeAllocation, new { @class = "form-control mandatory-mark", @type = "time" })
                                            @Html.ValidationMessageFor(m => m.TimeAllocation)
                                        </div>

                                        @*ActivationDate*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Activation Date")
                                            @Html.TextBoxFor(m => m.ActivationDate, "{0:yyyy-MM-dd}", new { @id = "ActivationDate", @class = "form-control mandatory-mark"})
                                            @Html.ValidationMessageFor(m => m.ActivationDate)
                                        </div>

                                        @*Expiry Date*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Expiry Date")
                                            @Html.TextBoxFor(m => m.ExpiryDate, "{0:yyyy-MM-dd}", new { @id = "ExpiryDate", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ExpiryDate)
                                        </div>

                                        @*Note*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Note")
                                            @Html.TextAreaFor(m => m.Note, new { @id = "note", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Note)
                                        </div>

                                        @*TransNote*@
                                        <div class="form-group">
                                            @Html.CustomLabel(model.NoteInRegionalLanguage)
                                            @Html.TextAreaFor(m => m.TransNote, new { @id = "trans-note", @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.TransNote)
                                        </div>

                                        @*Hiddent Field For AgendaPrmKey*@
                                        @Html.HiddenFor(m => m.AgendaPrmKey)

                                        @*Hiddent Field For AgendaModificationPrmKey*@
                                        @Html.HiddenFor(m => m.AgendaModificationPrmKey)

                                        @*Hiddent Field For AgendaTranslationPrmKey*@
                                        @Html.HiddenFor(m => m.AgendaTranslationPrmKey)
                                    </div>
                                </div>
                            </div>

                        @*Save/Submit Button*@
                        @Html.OperationFooter("Verify", "Exit", "Home", Model.Remark)
                    }
                }
                </div>
            </div>
        </div>
        </div>
    </body>
</html>
