@model IEnumerable<DemoProject.Services.ViewModel.Account.Master.FixedAssetItemViewModel>
@using DemoProject.Services.ViewModel.Configuration
@using DemoProject.Services.ViewModel.Account.Master
@using DemoProject.Services.HtmlHelpers


@{
    // Make Proper Menu Parameter
    HeaderPartialModel headerPartialModel = new HeaderPartialModel("FAIRIN");
}

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />

    <title>Fixed Asset Item - Index </title>
</head>
<body>
    <div class="container-fluid">
        @*======= First Row - For Header =======*@
        <div class="row">
            <div class="col-12">
                @Html.Partial("Header", headerPartialModel)
            </div>
        </div>
        <br />

        @*======= Second Row - Data Entry Page =======*@
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body no-footer">
                        <table id="example" class="display table table-striped table-hover dt-responsive nowrap cell-border">
                            <thead>
                                <tr>
                                    <th>SR.</th>
                                    <th>Name Of Item</th>
                                    <th>Entry Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var item in Model)
                                    {
                                        <tr class="hoverlightblue">
                                            <td></td>
                                            <td>@item.NameOfItem</td>
                                            <td>@item.MakerEntryDateTime</td>
                                            <td>
                                                <button class="btn btn-link" onclick="location.href='@Url.Action("Amend","FixedAssetItem",new {@item.FixedAssetItemId })'">Amend </button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    @Html.OperationFooter("None", "Exit", "Home", "None")
                </div>
            </div>
        </div>
    </div>
</body>
</html>

