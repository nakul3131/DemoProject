@model DemoProject.Services.ViewModel.Management.Master.EvaluationSectionViewModel
@using DemoProject.Services.ViewModel.Configuration
@using DemoProject.Services.ViewModel.Management.Master
@using DemoProject.Services.HtmlHelpers

@{
    EvaluationSectionViewModel model = new EvaluationSectionViewModel();
    HeaderPartialModel headerPartialModel = new HeaderPartialModel("EVSMOD");
}

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <title>EvaluationSection - Modify</title>
</head>
<body>
    <div class="container-fluid">

        @* ======= First Row - For Header ======= *@
        <div class="row">
            <div class="col-10 offset-1">
                @Html.Partial("Header", headerPartialModel)
            </div>
        </div>

        @* ======= Second Row - Data Entry Page ======= *@
        <div class="row mt-3">
            <div class="col-10 offset-1">
                <div class="card mb-3">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        {
                            <div class="card-body">

                                @* ======= First Row - Mandatory Mark ======= *@
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <h6 class="mb-2 text-right text-muted"><b class="mandatory-mark"> &nbsp; Mandatory Field</b></h6>
                                    </div>
                                </div>

                                @* ======= Second Row - Page Title, Translation ======= *@
                                <div class="row mt-2">
                                    @*Page Title*@
                                    <div class="col-12">
                                        <h5 class="font-weight-bold mt-1">Modify</h5>
                                        <hr />
                                    </div>
                                </div>

                                @*Submit Error*@
                                @Html.ValidationMessage("SubmitError")

                                @* ======= Third Row - Data Entry Page ======= *@
                                <div class="row">
                                    <div class="col-12">
                                        @*Name Of EvaluationSection*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Name Of EvaluationSection")
                                            @Html.TextBoxFor(m => m.NameOfEvaluationSection, new { @id = "name-of-evaluation-section", @class = "form-control mandatory-mark", @maxlength = "100", @autocomplete = "off", @placeholder = "Enter Name Of EvaluationSection", required = "required", onkeydown = "Maketranslation()", onkeyup = "ToTextCapitalize()" })
                                            @Html.ValidationMessageFor(m => m.NameOfEvaluationSection)
                                        </div>

                                        @*Name Of EvaluationSection*@
                                        <div class="form-group">
                                            @Html.CustomLabel(model.NameOfEvaluationSectionInRegionalLanguage)
                                            @Html.TextBoxFor(m => m.TransNameOfEvaluationSection, null, new { @id = "trans-name-of-evaluation-section", @class = "form-control mandatory-mark", @placeholder = model.NameOfEvaluationSectionPlaceHolderInRegionalLanguage, @autocomplete = "off", @maxlength = "100" })
                                            @Html.ValidationMessageFor(m => m.TransNameOfEvaluationSection)
                                        </div>

                                        @*Alias Name*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Alias Name")
                                            @Html.TextBoxFor(m => m.AliasName, new { @id = "alias-name", @class = "form-control", @placeholder = "Enter Alias Name", @maxlength = "10", @autocomplete = "off", onkeydown = "Maketranslation()", onkeyup = "ToTextCapitalize()" })
                                            @Html.ValidationMessageFor(m => m.AliasName)
                                        </div>

                                        @*Alias Name*@
                                        <div class="form-group">
                                            @Html.CustomLabel(model.AliasNameInRegionalLanguage)
                                            @Html.TextBoxFor(m => m.TransAliasName, null, new { @id = "trans-alias-name", @class = "form-control", @placeholder = model.AliasNamePlaceHolderInRegionalLanguage, @autocomplete = "off", @maxlength = "10" })
                                            @Html.ValidationMessageFor(m => m.TransAliasName)
                                        </div>

                                        @*Name On Report*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Name On Report")
                                            @Html.TextBoxFor(m => m.NameOnReport, new { @id = "name-on-report", @class = "form-control", @placeholder = "Enter Name On Report", @maxlength = "100", @autocomplete = "off", onkeydown = "Maketranslation()", onkeyup = "ToTextCapitalize()" })
                                            @Html.ValidationMessageFor(m => m.NameOnReport)
                                        </div>

                                        @*Name On Report*@
                                        <div class="form-group">
                                            @Html.CustomLabel(model.NameOnReportInRegionalLanguage)
                                            @Html.TextBoxFor(m => m.TransNameOnReport, null, new { @id = "trans-name-on-report", @class = "form-control", @placeholder = model.NameOnReportPlaceHolderInRegionalLanguage, @autocomplete = "off", @maxlength = "100" })
                                            @Html.ValidationMessageFor(m => m.TransNameOnReport)
                                        </div>

                                        @*Sequence Number*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Sequence Number")
                                            @Html.TextBoxFor(m => m.SequenceNumber, new { @class = "form-control mandatory-mark", @placeholder = "Enter Sequence Number", @type = "number", @min = 1, @max = 255, @autocomplete = "off", onkeyup = "ToTextCapitalize()" })
                                            @Html.ValidationMessageFor(m => m.SequenceNumber)
                                        </div>

                                        @*Activation Date*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Activation Date")
                                            @Html.TextBoxFor(m => m.ActivationDate, "{0:yyyy-MM-dd}", new { @id = "activation-date", @class = "form-control mandatory-mark", @placeholder = "Enter Activation Date", @Type = "date", @autocomplete = "off", onchange = "Activationdate()" })
                                            @Html.ValidationMessageFor(m => m.ActivationDate)
                                        </div>

                                        @*Expiry Date*@
                                        <div class="form-group m-1">
                                            @Html.CustomLabel("Expiry Date")
                                            @Html.TextBoxFor(m => m.ExpiryDate, "{0:yyyy-MM-dd}", new { @id = "expiry-date", @class = "form-control", @Type = "date", @autocomplete = "off", onchange = "Expirydate()" })
                                            @Html.ValidationMessageFor(m => m.ExpiryDate)
                                        </div>

                                        @*Note*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Note")
                                            @Html.TextAreaFor(m => m.Note, new { @id = "note", @class = "form-control", @placeholder = "Enter Note", @autocomplete = "off", @maxlength = "1500", onkeydown = "Maketranslation()", onkeyup = "ToTextCapitalize()" })
                                            @Html.ValidationMessageFor(m => m.Note)
                                        </div>

                                        @*Note*@
                                        <div class="form-group">
                                            @Html.CustomLabel(model.NoteInRegionalLanguage)
                                            @Html.TextAreaFor(m => m.TransNote, new { @id = "trans-note", @class = "form-control", @placeholder = model.NotePlaceHolderInRegionalLanguage, @autocomplete = "off", @maxlength = "1500" })
                                            @Html.ValidationMessageFor(m => m.TransNote)
                                        </div>

                                        @*ReasonForModification*@
                                        <div class="form-group">
                                            @Html.CustomLabel("ReasonForModification")
                                            @Html.TextAreaFor(m => m.ReasonForModification, new { @id = "reason-for-modification", @class = "form-control mandatory-mark", @placeholder = "Enter Reason For Modification", required = "required", @maxlength = "100", @autocomplete = "off", onkeydown = "Maketranslation()", onkeyup = "ToTextCapitalize()" })
                                            @Html.ValidationMessageFor(m => m.ReasonForModification)
                                        </div>

                                        @*TransReasonForModification*@
                                        <div class="form-group">
                                            @Html.CustomLabel(model.ReasonForModificationInRegionalLanguage)
                                            @Html.TextAreaFor(m => m.TransReasonForModification, new { @Id = "trans-reason-for-modification", @class = "form-control m1 mandatory-mark", @placeholder = model.ReasonForModificationPlaceHolderInRegionalLanguage, @autocomplete = "off" })
                                            @Html.ValidationMessageFor(m => m.TransReasonForModification)
                                        </div>

                                        @*Hiddent Field For EvaluationSectionPrmKey*@
                                        @Html.HiddenFor(m => m.EvaluationSectionPrmKey)

                                    </div>
                                </div>
                            </div>

                            @*Save/Submit Button*@
                            @Html.OperationFooter("Modify", "Exit", "Home", "None")
                        }
                    }

                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script>
        var url = "@Url.Action("GetUniqueEvaluationSectionName", "EvaluationSection")";
</script>
<script src="~/Scripts/Custom/EvaluationSection.js"></script>
