                                            <button type="button" class="btn btn-primary btn-no">No</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Save/Submit Button*@
                            @Html.OperationFooter("Create", "Exit", "Cancel", "None")
                        }
