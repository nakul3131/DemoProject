@model DemoProject.Services.ViewModel.Account.Transaction.TransactionViewModel
@using DemoProject.Services.ViewModel.Account.Transaction
@using DemoProject.Services.HtmlHelpers
@using DemoProject.Services.ViewModel.Configuration


@{
    TransactionDetailViewModel transactionDetailViewModel = new TransactionDetailViewModel();
    HeaderPartialModel headerPartialModel = new HeaderPartialModel("TRMCRT");
}

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <title>Transaction-Create</title>
</head>

<body>
    <div class="container-fluid">
        @*======= First Row - For Header =======*@
        <div class="row">
            <div class="col-12">
                @Html.Partial("Header", headerPartialModel)
            </div>
        </div>

        @*======= Second Row - Data Entry Page =======*@
        <div class="row mt-3">
            <div class="col-12">
                <div class="card mb-3">
                    @using (Html.BeginForm("Create", "Transaction", FormMethod.Post, new { enctype = "multipart/form-data", @id = "form", @autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        {
                            <div class="card-body">
                                @*======= First Row - Mandatory Mark =======*@
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <h6 class="mb-2 text-right text-muted"><b class="mandatory-mark">&nbsp; Mandatory Field</b></h6>
                                    </div>
                                </div>

                                @*======= Second Row - Page Title, Translation =======*@
                                <div class="row mt-2">
                                    @*Page Title*@
                                    <div class="col-12">
                                        <h5 class="font-weight-bold mt-1">Create</h5>
                                        <hr />
                                    </div>
                                </div>

                                @*Submit Error*@
                                @Html.ValidationMessage("SubmitError")

                                @*======= Third Row - Transaction Date, Transaction Type =======*@
                                <div id="first-row" class="row">
                                    <div class="col-6">
                                        @*TransactionType*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Transaction Type")
                                            @Html.DropDownListFor(m => m.TransactionTypeId, new SelectList(transactionDetailViewModel.TransactionTypeDropdownList, "Value", "Text", 0), "--- Select Transaction Type ---", new { @id = "transaction-type-id", @class = "form-control mandatory-mark", required = "required" })
                                            @Html.ValidationMessageFor(m => m.TransactionTypeId)
                                            <span id="transaction-type-id-db-error" class="error modal-input-error d-none"> Unable To Transaction Type List At This Time. Please Contact To Database Administrator Or Try Again Later .</span>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        @*PaymentMode*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Payment Mode")
                                            @Html.DropDownListFor(m => m.PaymentMode, new SelectList(transactionDetailViewModel.PaymentModeDropdownList, "Value", "Text", 0), "--- Select Payment Mode ---", new { @id = "payment-mode-id", @class = "form-control mandatory-mark", required = "required" })
                                            @Html.ValidationMessageFor(m => m.PaymentMode)
                                        </div>
                                    </div>
                                </div>

                                @*======= Fourth Row - Payment Mode, By Hand, Cheque Number, Reference Number =======*@
                                <div id="second-row" class="row">
                                    <div class="col-6">
                                        @*ByHand*@
                                        <div id="by-hand-input" class="form-group">
                                            @Html.CustomLabel("By Hand")
                                            @Html.TextBoxFor(m => m.ByHand, new { @id = "by-hand", @class = "form-control text-capitalize default-self deny-multiple-space mandatory-mark alpha", @placeholder = "Enter By Hand", @minlength = 4, @maxlength = 120, required = "required" })
                                            @Html.ValidationMessageFor(m => m.ByHand)
                                            <span id="by-hand-db-error" class="error d-none"> Unable To Fetch Available Customer List At This Time. Please Contact The Database Administrator Or Try Again Later.</span>
                                        </div>

                                        @*ReferenceNumber*@
                                        <div id="reference-number-input" class="form-group d-none">
                                            @Html.CustomLabel("Reference Number")
                                            @Html.TextBoxFor(m => m.ReferenceNumber, new { @id = "reference-number", @class = "form-control upper-case alpha-numeric deny-multiple-space mandatory-mark", @placeholder = "Enter Reference Number", @minlength = 1, @maxlength = 20, required = "required" })
                                            @Html.ValidationMessageFor(m => m.ReferenceNumber)
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        @*TransactionDate*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Transaction Date")
                                            @Html.TextBoxFor(m => m.TransactionDate, "{0:yyyy-MM-dd}", new { @id = "transaction-date", @class = "form-control mandatory-mark deny-future-date set-current-date", @type = "date", required = "required" })
                                            @Html.ValidationMessageFor(m => m.TransactionDate)
                                        </div>
                                    </div>

                                </div>

                                @*======= Fifth Row - Purpose Note =======*@
                                <div id="third-row" class="row">
                                    <div class="col-6">
                                        @*Purpose*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Purpose")
                                            @Html.TextBoxFor(m => m.Purpose, new { @id = "purpose", @class = "form-control text-capitalize alpha-numeric deny-multiple-space default-none", @placeholder = "Enter Purpose", @minlength = 4, @maxlength = 120 })
                                            @Html.ValidationMessageFor(m => m.Purpose)
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        @*Note*@
                                        <div class="form-group">
                                            @Html.CustomLabel("Note")
                                            @Html.TextBoxFor(m => m.Note, new { @id = "transation-note", @class = "form-control title-case default-none deny-multiple-space", @placeholder = "Enter Note", @maxlength = 1200 })
                                            @Html.ValidationMessageFor(m => m.Note)
                                        </div>
                                    </div>
                                </div>

                                @* Credit And Debit Datatable*@
                                <div id="credit-debit-section" class="row mt-3">
                                    @*Credit Side*@
                                    <div id="credit-data-table" class="col-6">
                                        <div id="credit-card" class="card">
                                            <div class="card-header bg-success">
                                                <div class="row">
                                                    <div class="col-sm-4">
                                                        <a class="card-link">
                                                            <div class="row">
                                                                <h4 class="ml-2 mt-2 text-white">@Html.TextWithRegionalLanguage("Credit")</h4>
                                                            </div>
                                                        </a>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <span class="text-white ml-2 credit-amount font-weight-bold" style="font-size:16px;"></span>
                                                    </div>
                                                    <div class="col-2">
                                                        <div class="row justify-content-center justify-content-md-end align-items-center mr-1">
                                                            <i class="fa fa-inr text-white fa-2x mr-2 " aria-hidden="true" style="font-size:23px;"></i>
                                                            <span class="text-white mb-1" id="credit-amount" data-id="0" style="font-size:23px;">0.00</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div id="collapse-credit" class="collapse show" aria-labelledby="heading-credit" data-parent="#accordion">
                                                <div class="row">
                                                    <div class="col-12">
                                                        <div class="import float-right" id="import-credit" style="z-index:100!important;margin-top:-3% !important"></div>
                                                    </div>
                                                </div>
                                                <div class="card-body">
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <div class="modal fade" id="credit-modal" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="modal-new-event" aria-hidden="true">
                                                                <div class="modal-dialog modal-dialog-centered modal-dialog-zoom ui-front modal-lg" role="document">
                                                                    <div class="modal-content">
                                                                        <div class="modal-header bg-success text-white">
                                                                            <h4 class="modal-title text-center" id="credit-text">Credit</h4>
                                                                            <button type="button" id="close-credit" class="close" data-dismiss="modal" aria-label="Close">
                                                                                <span aria-hidden="true">&times;</span>
                                                                            </button>
                                                                        </div>

                                                                        <div class="card-body">

                                                                            @*BranchName*@
                                                                            <div id="credit-branch-input" class="form-group">
                                                                                @Html.CustomLabel("Branch Name")
                                                                                @Html.DropDownListFor(m => m.TransactionGeneralLedgerViewModel.BusinessOfficeId, new SelectList(transactionDetailViewModel.BusinessOfficeDropdownList, "Value", "Text"), "--- Please Select Branch Name ---", new { @id = "credit-business-office-id", @class = "form-control mandatory-mark modal-input", required = "required" })
                                                                                @Html.ValidationMessageFor(m => m.TransactionGeneralLedgerViewModel.BusinessOfficeId)
                                                                                <span id="credit-business-office-id-error" class="error modal-input-error d-none"> Please Select Branch Before Proceeding.</span>
                                                                                <span id="credit-business-office-id-db-error" class="error modal-input-error d-none"> Unable To Fetch Branch List At This Time. Please Contact To Database Administrator Or Try Again Later.</span>
                                                                            </div>

                                                                            @*CustomerName*@
                                                                            <div id="credit-person-name" class="form-group">
                                                                                @Html.CustomLabel("Customer Name")
                                                                                @Html.TextBox("person", null, new { @type = "search", @id = "credit-person-id", @class = "form-control mandatory-mark deny-multiple-space text-capitalize", @placeholder = "Search for...Customer Number,Name,DateOfBirth", required = "required" })
                                                                                @Html.TextBoxFor(m => m.PersonId, new { @type = "search", @id = "credit-person-id1", @class = "form-control mandatory-mark text-capitalize d-none", @placeholder = "Search for...Customer Number,Name,DateOfBirth", required = "required" })
                                                                                <span id="credit-person-id-error" class="error modal-input-error d-none"> Please Select Customer Name Before Proceeding.</span>
                                                                                <span id="credit-person-id-db-error" class="error modal-input-error d-none"> Unable To Fetch Available Customers Name. Please Contact To Database Administrator.</span>
                                                                            </div>

                                                                            @*GeneralLedgerId*@
                                                                            <div class="form-group">
                                                                                @Html.CustomLabel("General Ledger")
                                                                                @Html.DropDownListFor(m => m.TransactionGeneralLedgerViewModel.GeneralLedgerId, new List<SelectListItem>(), "--- Please Select General Ledger ---", new { @id = "credit-general-ledger-id", @class = "form-control mandatory-mark modal-input", required = "required" })
                                                                                @Html.ValidationMessageFor(m => m.TransactionGeneralLedgerViewModel.GeneralLedgerId)
                                                                                <span id="credit-general-ledger-id-error" class="error modal-input-error d-none"> Please Select General Ledger Before Proceeding.</span>
                                                                                <span id="credit-general-ledger-id-db-error" class="error modal-input-error d-none"> Unable To Fetch General Ledger List At This Time. Please Contact To Database Administrator Or Try Again Later .</span>
                                                                            </div>

                                                                            @*AccountNumber*@
                                                                            <div class="form-group">
                                                                                @Html.CustomLabel("Account Number")
                                                                                @Html.DropDownListFor(m => m.TransactionCustomerAccountViewModel.TransactionCustomerAccountId, new List<SelectListItem>(), "--- Please Select Account Number ---", new { @id = "credit-account-number-id", @class = "form-control mandatory-mark modal-input", required = "required" })
                                                                                @Html.ValidationMessageFor(m => m.TransactionCustomerAccountViewModel.TransactionCustomerAccountId)
                                                                                <span id="credit-account-number-id-error" class="error modal-input-error d-none"> Please Select Account Number Before Proceeding.</span>
                                                                                <span id="credit-account-number-id-db-error" class="error modal-input-error d-none"> Unable To Fetch Account Number List At This Time. Please Contact To Database Administrator Or Try Again Later.</span>
                                                                            </div>

                                                                            @*SharesFaceValue*@
                                                                            <div id="credit-shares-capital-input" class="d-none">
                                                                                <div class="form-group">
                                                                                    @*NumberOfShares*@
                                                                                    <div class="form-group">
                                                                                        @Html.CustomLabel("Number Of Shares")
                                                                                        @Html.TextBoxFor(m => m.SharesCapitalTransactionViewModel.NumberOfShares, new { @id = "credit-number-of-shares", @class = "form-control real-number mandatory-mark modal-input", @placeholder = "Enter Number Of Shares", @type = "number", required = "required", @min = 0 })
                                                                                        @Html.ValidationMessageFor(m => m.SharesCapitalTransactionViewModel.NumberOfShares)
                                                                                        <span id="credit-number-of-shares-error" class="error modal-input-error d-none"> Please Enter Valid Number Of Shares.</span>
                                                                                    </div>

                                                                                    @*Shares Certificate Number*@
                                                                                    <div id="shares-certificate-input">
                                                                                        @*StartCertificationNumber*@
                                                                                        <div class="form-group">
                                                                                            @Html.CustomLabel("Start Certification Number")
                                                                                            @Html.TextBoxFor(m => m.SharesCapitalTransactionViewModel.StartSharesCertificateNumber, new { @id = "credit-start-certificate-number", @class = "form-control real-number mandatory-mark modal-input", @placeholder = "Enter Unique Start Certificate Number", required = "required", @type = "number", @min = "1", @max = "9999999" })
                                                                                            @Html.ValidationMessageFor(m => m.SharesCapitalTransactionViewModel.StartSharesCertificateNumber)
                                                                                            <span id="credit-start-certificate-number-error" class="error modal-input-error d-none"> Please Enter Valid Start Certification Number.</span>
                                                                                        </div>

                                                                                        @*EndCertificationNumber*@
                                                                                        <div class="form-group">
                                                                                            @Html.CustomLabel("End Certification Number")
                                                                                            @Html.TextBoxFor(m => m.SharesCapitalTransactionViewModel.EndSharesCertificateNumber, new { @id = "credit-end-certificate-number", @class = "form-control real-number mandatory-mark modal-input", @placeholder = "Enter Unique End Certificate Number", required = "required", @type = "number", @min = "1", @max = "999999999" })
                                                                                            @Html.ValidationMessageFor(m => m.SharesCapitalTransactionViewModel.EndSharesCertificateNumber)
                                                                                            <span id="credit-end-certificate-number-error" class="error modal-input-error d-none"> Please Enter Valid End Certification Number.</span>
                                                                                        </div>
                                                                                    </div>

                                                                                    @*SharesFaceValue*@
                                                                                    @Html.CustomLabel("Shares Price")
                                                                                    <div class="input-group">
                                                                                        <div class="input-group-prepend"><span class="input-group-text">₹</span></div>
                                                                                        @Html.TextBoxFor(m => m.SharesCapitalTransactionViewModel.SharesFaceValue, new { @id = "credit-shares-face-value", @class = "form-control mandatory-mark", disabled = true, @type = "number", required = "required", @min = 1, @max = 9999999999999999 })
                                                                                    </div>
                                                                                    @Html.ValidationMessageFor(m => m.SharesCapitalTransactionViewModel.SharesFaceValue)
                                                                                    <span id="credit-shares-face-value-error" class="error modal-input-error d-none"> Please Enter Valid Shares Price.</span>
                                                                                    <span id="credit-shares-face-value-db-error" class="error modal-input-error d-none"> Unable To Fetch Shares Price At This Time. Please Contact To Database Administrator Or Try Again Later.</span>
                                                                                </div>

                                                                                @*Shares Amount*@
                                                                                <div class="form-group">
                                                                                    @Html.CustomLabel("Shares Amount")
                                                                                    <div class="input-group">
                                                                                        <div class="input-group-prepend"><span class="input-group-text">₹</span></div>
                                                                                        @Html.TextBoxFor(m => m.SharesCapitalTransactionViewModel.SharesAmount, new { @id = "credit-shares-amount", @class = "form-control mandatory-mark modal-input", disabled = true, @type = "number", required = "required", @min = 1, @max = 9999999999999999 })
                                                                                    </div>
                                                                                    @Html.ValidationMessageFor(m => m.SharesCapitalTransactionViewModel.SharesAmount)
                                                                                    <span id="credit-shares-amount-error" class="error modal-input-error d-none"> Please Enter Valid Shares Amount.</span>
                                                                                    <span id="credit-shares-amount-db-error" class="error modal-input-error d-none"> Unable To Fetch Shares Amount At This Time. Please Contact To Database Administrator Or Try Again Later .</span>
                                                                                    <span id="credit-shares-amount-limit-error" class="error modal-input-error d-none"></span>
                                                                                </div>

                                                                                @*Admission Fees For Membership*@
                                                                                <div id="share-capital-fee-input" class="form-group d-none">
                                                                                    @Html.CustomLabel("Admission Fees")
                                                                                    <div class="input-group">
                                                                                        <div class="input-group-prepend"><span class="input-group-text">₹</span></div>
                                                                                        @Html.TextBoxFor(m => m.SharesCapitalTransactionViewModel.AdmissionFees, new { @id = "member-admission-fee", @class = "form-control mandatory-mark", @placeholder = "Enter admissionfees for membership Amount", disabled = true, required = "required", @type = "number" })
                                                                                    </div>
                                                                                    @Html.ValidationMessageFor(m => m.SharesCapitalTransactionViewModel.AdmissionFees)
                                                                                    <span id="member-admission-fee-error" class="error modal-input-error d-none"> Please Enter Valid Admission Fees.</span>
                                                                                    <span id="member-admission-fee-db-error" class="error modal-input-error d-none"> Unable To Fetch Admission Fees At This Time. Please Contact To Database Administrator Or Try Again Later .</span>

                                                                                    @*TitleForFees1*@
                                                                                    <div class="form-group">
                                                                                        <div class="input-group">
                                                                                            <div class="input-group-prepend"><span class="input-group-text">₹</span></div>
                                                                                            @Html.TextBoxFor(m => m.SharesCapitalTransactionViewModel.Charges1, new { @id = "credit-title-for-fees1", @class = "form-control mandatory-mark", @placeholder = "Enter Title For Fees1", disabled = true, @type = "number" })
                                                                                        </div>
                                                                                        @Html.ValidationMessageFor(m => m.SharesCapitalTransactionViewModel.Charges1)
                                                                                    </div>
                                                                                </div>
                                                                            </div>

                                                                            <div id="total-amount-input">
                                                                                @*Total Amount*@
                                                                                <div class="form-group">
                                                                                    @Html.CustomLabel("Total Amount")
                                                                                    <div class="input-group">
                                                                                        <div class="input-group-prepend"><span class="input-group-text">₹</span></div>
                                                                                        @Html.TextBoxFor(m => m.TransactionCustomerAccountViewModel.Amount, new { @id = "credit-transaction-amount", @class = "form-control real-number mandatory-mark modal-input", disabled = true, @placeholder = "Enter Transaction Amount", @type = "number" })
                                                                                    </div>
                                                                                    @Html.ValidationMessageFor(m => m.TransactionCustomerAccountViewModel.Amount)
                                                                                    <span id="credit-transaction-amount-error" class="error modal-input-error d-none"> Please Enter Valid Total Amount.</span>
                                                                                </div>
                                                                            </div>

                                                                            @*GST*@
                                                                            <div id="gst-input">
                                                                                @*GSTRate*@
                                                                                <div class="form-group">
                                                                                    @Html.CustomLabel("GST Rate")
                                                                                    <div class="input-group">
                                                                                        <div class="input-group-prepend"><span class="input-group-text">₹</span></div>
                                                                                        @Html.TextBoxFor(m => m.GSTRate, new { @id = "credit-gst-rate", @class = "form-control mandatory-mark modal-input", @placeholder = "Enter GST Rate", disabled = true, @type = "number", required = "required", @min = 0 })
                                                                                    </div>
                                                                                    @Html.ValidationMessageFor(m => m.GSTRate)
                                                                                </div>

                                                                                <div id="sgst-cgst-input" class="row">
                                                                                    <div class="col-6">
                                                                                        @*SGST*@
                                                                                        <div class="form-group">
                                                                                            @Html.CustomLabel("SGST")
                                                                                            <div class="input-group">
                                                                                                <div class="input-group-prepend"><span class="input-group-text">₹</span></div>
                                                                                                @Html.TextBoxFor(m => m.SGST, new { @id = "credit-sgst", @class = "form-control mandatory-mark modal-input", @placeholder = "Enter SGST", @type = "number", disabled = true, required = "required", @min = 0 })
                                                                                                @Html.ValidationMessageFor(m => m.SGST)
                                                                                            </div>
                                                                                        </div>
                                                                                    </div>

                                                                                    <div class="col-6">
                                                                                        @*CGST*@
                                                                                        <div class="form-group">
                                                                                            @Html.CustomLabel("CGST")
                                                                                            <div class="input-group">
                                                                                                <div class="input-group-prepend"><span class="input-group-text">₹</span></div>
                                                                                                @Html.TextBoxFor(m => m.CGST, new { @id = "credit-cgst", @class = "form-control mandatory-mark modal-input", @placeholder = "Enter CGST", @type = "number", disabled = true, required = "required", @min = 0 })
                                                                                                @Html.ValidationMessageFor(m => m.CGST)
                                                                                            </div>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>

                                                                                @*IGST*@
                                                                                <div id="igst-input">
                                                                                    @*IGST Rate*@
                                                                                    <div class="form-group">
                                                                                        @Html.CustomLabel("IGST Rate")
                                                                                        <div class="input-group">
                                                                                            <div class="input-group-prepend"><span class="input-group-text">₹</span></div>
                                                                                            @Html.TextBoxFor(m => m.IGSTRate, new { @id = "credit-igst-rate", @class = "form-control mandatory-mark modal-input", @placeholder = "Enter IGST Rate", disabled = true, @type = "number", required = "required", @min = 0 })
                                                                                        </div>
                                                                                        @Html.ValidationMessageFor(m => m.IGSTRate)
                                                                                    </div>

                                                                                    @*IGST Amount*@
                                                                                    <div id="igst-amount-input" class="form-group">
                                                                                        @Html.CustomLabel("IGST Amount")
                                                                                        <div class="input-group">
                                                                                            <div class="input-group-prepend"><span class="input-group-text">₹</span></div>
                                                                                            @Html.TextBoxFor(m => m.IGSTAmount, new { @id = "credit-igst-amount", @class = "form-control mandatory-mark modal-input", @placeholder = "Enter IGST Amount", disabled = true, @type = "number", required = "required", @min = 0 })
                                                                                        </div>
                                                                                        @Html.ValidationMessageFor(m => m.IGSTAmount)
                                                                                    </div>
                                                                                </div>

                                                                                @*Cess*@
                                                                                <div id="cess-input">
                                                                                    @*CessRate*@
                                                                                    <div class="form-group">
                                                                                        @Html.CustomLabel("Cess Rate")
                                                                                        <div class="input-group">
                                                                                            <div class="input-group-prepend"><span class="input-group-text">₹</span></div>
                                                                                            @Html.TextBoxFor(m => m.CessRate, new { @id = "credit-cess-rate", @class = "form-control mandatory-mark modal-input", @placeholder = "Enter Cess Rate", disabled = true, @type = "number", required = "required", @min = 0 })
                                                                                        </div>
                                                                                        @Html.ValidationMessageFor(m => m.CessRate)
                                                                                    </div>

                                                                                    @*CessAmount*@
                                                                                    <div id="cess-amount-input" class="form-group">
                                                                                        @Html.CustomLabel("Cess Amount")
                                                                                        <div class="input-group">
                                                                                            <div class="input-group-prepend"><span class="input-group-text">₹</span></div>
                                                                                            @Html.TextBoxFor(m => m.CessAmount, new { @id = "credit-cess-amount", @class = "form-control mandatory-mark modal-input", @placeholder = "Enter Cess Amount", disabled = true, @type = "number", required = "required", @min = 0 })
                                                                                        </div>
                                                                                        @Html.ValidationMessageFor(m => m.CessAmount)
                                                                                    </div>
                                                                                </div>

                                                                                @*IsApplicableForReverseCharge*@
                                                                                <div class="form-group row mt-5">
                                                                                    <div class="col-10">
                                                                                        @Html.CustomLabel("Is Applicable For Reverse Charge")
                                                                                    </div>
                                                                                    <div class="col-2">
                                                                                        <div class="text-left">
                                                                                            <label class="switch switch-left-right">
                                                                                                @Html.CheckBoxFor(m => m.IsApplicableForReverseCharge, new { @id = "credit-is-applicable-for-reverse-charge", @class = "form-control modal-switch-input", required = "required" })
                                                                                                <span class="slider round">
                                                                                                    <span class="on"><b>True</b></span><span class="off"><b>False</b></span>
                                                                                                </span>
                                                                                            </label>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>

                                                                            @*Narration*@
                                                                            <div class="form-group">
                                                                                @Html.CustomLabel("Narration")
                                                                                @Html.TextAreaFor(m => m.TransactionCustomerAccountViewModel.Narration, new { @id = "credit-narration", @class = "form-control mandatory-mark deny-multiple-space modal-input", @placeholder = "Enter Narration", disabled = true, @maxlength = "450", required = "required" })
                                                                                @Html.ValidationMessageFor(m => m.TransactionCustomerAccountViewModel.Narration)
                                                                            </div>

                                                                            @*Note*@
                                                                            <div class="form-group">
                                                                                @Html.CustomLabel("Note")
                                                                                @Html.TextAreaFor(m => m.TransactionCustomerAccountViewModel.Note, new { @id = "credit-note", @class = "form-control title-case default-none deny-multiple-space modal-input", @placeholder = "Enter Note", @maxlength = "1200" })
