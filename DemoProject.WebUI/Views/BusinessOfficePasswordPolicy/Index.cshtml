@model IEnumerable<DemoProject.Services.ViewModel.Enterprise.Office.BusinessOfficeViewModel>
@using DemoProject.Services.ViewModel.Configuration

@{
    // Make Proper Menu Parameter
    HeaderPartialModel headerPartialModel = new HeaderPartialModel("BOPPIN");
}

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />

    <title>BusinessOfficePasswordPolicy - Index </title>
</head>
<body>
    @*======= First Row - For Header =======*@
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                @Html.Partial("Header", headerPartialModel)
            </div>
        </div>
        <br />


        @*======= Second Row - Data Entry Page =======*@
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body no-footer">
                        <table id="example" class="display table table-striped table-hover dt-responsive nowrap cell-border">
                            <thead>
                                <tr>
                                    <th>SR.</th>
                                    <th>Name Of BusinessOffice</th>
                                    <th>Entry Date</th>
                                    <th>User Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var item in Model)
                                    {
                                        <tr class="hoverlightblue">
                                            <td></td>
                                            <td>@item.NameOfBusinessOffice</td>
                                            <td>@item.EntryDateTime</td>
                                            <td>@item.NameOfUser</td>
                                            <td>
                                                <button class="btn btn-link" onclick="location.href='@Url.Action("Create","BusinessOfficePasswordPolicy",new {@item.BusinessOfficeId })'">Create</button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>