@model DemoProject.Services.ViewModel.Security.Password.PasswordPolicyViewModel
@using DemoProject.Services.ViewModel.Configuration
@using DemoProject.Services.HtmlHelpers

@{
    HeaderPartialModel headerPartialModel = new HeaderPartialModel("PSWAUT");
}

<!doctype html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />

    <title>Password Policy - Verify</title>
</head>
<body>
    <div class="container-fluid">

        @*First Row - For Header*@
        <div class="row">
            <div class="col-md-10 offset-1">
                @Html.Partial("Header", headerPartialModel)
            </div>
        </div>

        @*Second Row - Data Entry Page*@
        <div class="row mt-3">
            <div class="col-md-10 offset-1">
                <div class="card d-block mb-3">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        {
                    <div class="card-body read-only">

                        @*Page Title- Authorize*@
                        <div class="mb-4">
                            <h6 class="text-right text-muted"><b class="mandatory-mark"> &nbsp; Mandatory Field</b></h6>
                            <h5 class="font-weight-bold mt-1">Authorize</h5>
                            <hr />
                        </div>

                        @*Submit Error*@
                        @Html.ValidationMessage("SubmitError")

                        @*NameOf Password Policy*@
                        <div class="form-group">
                            @Html.CustomLabel("Name Of Password Policy")
                            @Html.TextBoxFor(m => m.NameOfPasswordPolicy, new { @class = "form-control mandatory-mark" })
                        </div>

                        @*Alias Name*@
                        <div class="form-group">
                            @Html.CustomLabel("Alias Name")
                            @Html.TextBoxFor(m => m.AliasName, new { @class = "form-control mandatory-mark" })
                        </div>

                        @*Name On Report*@
                        <div class="form-group">
                            @Html.CustomLabel("Name On Report")
                            @Html.TextBoxFor(m => m.NameOnReport, new { @class = "form-control mandatory-mark" })
                        </div>

                        @*Minimum Password Length*@
                        <div class="form-group">
                            @Html.CustomLabel("Minimum Password Length")
                            @Html.TextBoxFor(m => m.MinimumPasswordLength, new { @class = "form-control mandatory-mark" })
                        </div>

                        @*Maximum Password Length*@
                        <div class="form-group">
                            @Html.CustomLabel("Maximum Password Length")
                            @Html.TextBoxFor(m => m.MaximumPasswordLength, new { @class = "form-control mandatory-mark" })
                        </div>

                        @*Minimum Password Length*@
                        <div class="form-group">
                            @Html.CustomLabel("Minimum Number Of UpperCase Characters")
                            @Html.TextBoxFor(m => m.MinimumNumberOfUpperCaseCharacters, new { @class = "form-control mandatory-mark" })
                        </div>

                        @*Minimum Number Of LowerCase Characters*@
                        <div class="form-group">
                            @Html.CustomLabel("Minimum Number Of LowerCase Characters")
                            @Html.TextBoxFor(m => m.MinimumNumberOfLowerCaseCharacters, new { @class = "form-control mandatory-mark" })
                        </div>

                        @*Minimum Number Of SpecialCase Characters*@
                        <div class="form-group">
                            @Html.CustomLabel("Minimum Number Of SpecialCase Characters")
                            @Html.TextBoxFor(m => m.MinimumNumberOfSpecialCaseCharacters, new { @class = "form-control mandatory-mark" })
                        </div>

                        @*Minimum Number Of Numeric Characters*@
                        <div class="form-group">
                            @Html.CustomLabel("Minimum Number Of Numeric Characters")
                            @Html.TextBoxFor(m => m.MinimumNumberOfNumericCharacters, new { @class = "form-control mandatory-mark" })
                        </div>

                        @*Minimum Number Of Repetitive Characters*@
                        <div class="form-group">
                            @Html.CustomLabel("Minimum Number Of Repetitive Characters")
                            @Html.TextBoxFor(m => m.MinimumNumberOfRepetitiveCharacters, new { @class = "form-control mandatory-mark" })
                        </div>

                        @*Force Password Change After Days*@
                        <div class="form-group">
                            @Html.CustomLabel("Force Password Change After Days")
                            @Html.TextBoxFor(m => m.ForcePasswordChangeAfterDays, new { @class = "form-control mandatory-mark" })
                        </div>

                        @*Reuse Previous Password*@
                        <div class="form-group">
                            @Html.CustomLabel("Reuse Previous Password")
                            @Html.TextBoxFor(m => m.ReusePreviousPassword, new { @class = "form-control mandatory-mark" })
                        </div>

                        @*Minimum Days For Reuse Previous Password*@
                        <div class="form-group">
                            @Html.CustomLabel("Minimum Days For Reuse Previous Password")
                            @Html.TextBoxFor(m => m.MinimumDaysForReusePreviousPassword, new { @class = "form-control mandatory-mark" })
                        </div>

                        @*Password Expiry Alert Days*@
                        <div class="form-group">
                            @Html.CustomLabel("Password Expiry Alert Days")
                            @Html.TextBoxFor(m => m.PasswordExpiryAlertDays, new { @class = "form-control mandatory-mark" })
                        </div>

                        @*ActivationDate*@
                        <div class="form-group">
                            @Html.CustomLabel("ActivationDate")
                            @Html.TextBoxFor(m => m.ActivationDate, "{0:yyyy-MM-dd}", new { @class = "form-control mandatory-mark", @id = "ActivationDate", @autocomplete = "off", @placeholder = "Enter Activation Date", onchange = "Activedate()" })
                            @Html.ValidationMessageFor(m => m.ActivationDate)
                        </div>

                        @*ExpiryDate*@
                        <div class="form-group m-1">
                            @Html.CustomLabel("ExpiryDate")
                            @Html.TextBoxFor(m => m.ExpiryDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @id = "ExpiryDate", @autocomplete = "off", onchange = "Expirydate()" })
                            @Html.ValidationMessageFor(m => m.ExpiryDate)
                        </div>

                        @*Note*@
                        <div class="form-group">
                            @Html.CustomLabel("Note")
                            @Html.TextAreaFor(m => m.Note, new { @class = "form-control m1 text-capitalize default-none", @autocomplete = "off", @placeholder = "Enter Note", onfocus = "this.placeholder = ''", onblur = "this.placeholder = 'Enter Note'" })
                            @Html.ValidationMessageFor(m => m.Note)
                        </div>

                        @*Name Of User*@
                        <div class="form-group">
                            @Html.CustomLabel("Name Of User")
                            @Html.TextBoxFor(m => m.NameOfUser, new { @class = "form-control" })
                        </div>

                        @*Maker Entry Date*@
                        <div class="form-group">
                            @Html.CustomLabel("Entry Date Time")
                            @Html.TextBoxFor(m => m.EntryDateTime, new { @class = "form-control" })
                        </div>

                        @*Hiddent Field For PasswordPolicyPrmKey*@
                        @Html.HiddenFor(m => m.PasswordPolicyPrmKey)

                    </div>

                            @*Save/Submit Button*@
                            @Html.OperationFooter("Verify", "Exit", "Home", Model.Remark)
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
